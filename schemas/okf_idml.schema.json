{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_idml.schema.json",
  "$version": "1.0.0",
  "title": "InDesign IDML Filter",
  "description": "Configuration for the Okapi InDesign IDML Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_idml",
    "class": "net.sf.okapi.filters.idml.IDMLFilter",
    "extensions": [
      ".idml"
    ],
    "mimeTypes": []
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "specialCharacterPattern": {
      "type": "boolean",
      "default": false
    },
    "untagXmlStructures": {
      "type": "boolean",
      "default": true
    },
    "extractNotes": {
      "type": "boolean",
      "default": false
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenLayers": {
      "type": "boolean",
      "default": false
    },
    "extractHiddenPasteboardItems": {
      "type": "boolean",
      "default": false
    },
    "skipDiscretionaryHyphens": {
      "type": "boolean",
      "default": false
    },
    "extractBreaksInline": {
      "type": "boolean",
      "default": false
    },
    "extractHyperlinkTextSourcesInline": {
      "type": "boolean",
      "default": false
    },
    "extractCustomTextVariables": {
      "type": "boolean",
      "default": false
    },
    "extractIndexTopics": {
      "type": "boolean",
      "default": false
    },
    "extractExternalHyperlinks": {
      "type": "boolean",
      "default": false
    },
    "ignoreCharacterKerning": {
      "type": "boolean",
      "default": false
    },
    "characterKerningMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterKerningMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterTracking": {
      "type": "boolean",
      "default": false
    },
    "characterTrackingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterTrackingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterLeading": {
      "type": "boolean",
      "default": false
    },
    "characterLeadingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterLeadingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterBaselineShift": {
      "type": "boolean",
      "default": false
    },
    "characterBaselineShiftMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterBaselineShiftMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}