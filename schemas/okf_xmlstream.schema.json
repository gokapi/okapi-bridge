{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xmlstream.schema.json",
  "$version": "1.0.0",
  "title": "XML Stream Filter",
  "description": "Configuration for the Okapi XML Stream Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xmlstream",
    "class": "net.sf.okapi.filters.xmlstream.XmlStreamFilter",
    "extensions": [
      ".xml"
    ],
    "mimeTypes": [
      "text/xml",
      "application/xml"
    ]
  },
  "properties": {
    "taggedConfig": {
      "type": "object"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "editorTitle": {
      "type": "string",
      "default": "Parameters Editor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false
}