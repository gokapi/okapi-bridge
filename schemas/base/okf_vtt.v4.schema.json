{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_vtt.schema.json",
  "$version": "1.0.0",
  "title": "VTT Filter Filter",
  "description": "Configuration for the Okapi VTT Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_vtt",
    "class": "net.sf.okapi.filters.vtt.VTTFilter",
    "extensions": [],
    "mimeTypes": [
      "text/vtt"
    ],
    "configurations": [
      {
        "configId": "okf_vtt",
        "name": "VTT",
        "description": "VTT Documents",
        "mimeType": "text/vtt",
        "extensions": ".vtt;.srt",
        "parametersLocation": "okf_vtt.fprm",
        "parametersRaw": "#v1\ntimeFormat=HH:mm:ss.SSS\nmaxLinesPerCaption.i=2\nmaxCharsPerLine.i=47\ncjkCharsPerLine.i=18\n",
        "parameters": {
          "timeFormat": "HH:mm:ss.SSS",
          "maxLinesPerCaption": 2,
          "maxCharsPerLine": 47,
          "cjkCharsPerLine": 18
        },
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.vtt.VTTFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "cueSettings": {
      "type": "string",
      "default": "",
      "title": "Replace existing cue settings with text",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "discardCues",
        "enabledWhenSelected": false
      }
    },
    "discardCues": {
      "type": "boolean",
      "default": false,
      "title": "Discard existing cue settings",
      "x-widget": "checkbox"
    },
    "timeFormat": {
      "type": "string",
      "default": "HH:mm:ss.SSS",
      "title": "Time format",
      "x-widget": "text"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes",
      "x-widget": "checkbox"
    },
    "splitWords": {
      "type": "boolean",
      "default": true,
      "title": "Split words so that they don't go over the char limit",
      "x-widget": "checkbox"
    },
    "writeCharAnnotations": {
      "type": "boolean",
      "default": false,
      "title": "Write character limit info as annotations to xliff",
      "x-widget": "checkbox"
    },
    "mergeCaptions": {
      "type": "boolean",
      "default": true,
      "title": "Merge captions by sentence",
      "x-widget": "checkbox"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "title": "Has inline codes as defined below:",
      "x-widget": "checkbox"
    },
    "codeFinderRules": {
      "type": "string",
      "default": "#v1\ncount.i=1\nrule0=</?([A-Z0-9a-z]*)\\b[^>]*>\nsample=&name; <tag></at><tag/> <tag attr='val'> </tag=\"val\">\nuseAllRulesWhenTesting.b=true",
      "description": "Rules for inline codes",
      "x-widget": "codeFinder",
      "x-enabledBy": {
        "parameter": "useCodeFinder",
        "enabledWhenSelected": true
      }
    }
  },
  "additionalProperties": false
}