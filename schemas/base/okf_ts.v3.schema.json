{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ts.schema.json",
  "$version": "1.0.0",
  "title": "TS Filter Filter",
  "description": "Configuration for the Okapi TS Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ts",
    "class": "net.sf.okapi.filters.ts.TsFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-ts"
    ],
    "configurations": [
      {
        "configId": "okf_ts",
        "name": "TS",
        "description": "Configuration for Qt TS files.",
        "mimeType": "application/x-ts",
        "extensions": ".ts;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.ts.TsFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "escapeGT": {
      "type": "boolean",
      "default": false
    },
    "decodeByteValues": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}