{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_txml.schema.json",
  "$version": "1.0.0",
  "title": "TXML Filter Filter",
  "description": "Configuration for the Okapi TXML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_txml",
    "class": "net.sf.okapi.filters.txml.TXMLFilter",
    "extensions": [],
    "mimeTypes": [
      "text/xml"
    ]
  },
  "properties": {
    "allowEmptyOutputTarget": {
      "type": "boolean",
      "default": true,
      "title": "Allow empty target segments in output",
      "x-widget": "checkbox"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object"
    },
    "mergeAdjacentCodes": {
      "type": "object"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}