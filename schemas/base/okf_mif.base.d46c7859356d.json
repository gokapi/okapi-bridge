{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_mif.schema.json",
  "$version": "3.0.0",
  "title": "MIF Filter Filter",
  "description": "Configuration for the Okapi MIF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_mif",
    "class": "net.sf.okapi.filters.mif.MIFFilter",
    "extensions": [],
    "mimeTypes": [
      "application/vnd.mif"
    ]
  },
  "properties": {
    "extractBodyPages": {
      "type": "boolean",
      "default": true
    },
    "extractReferencePages": {
      "type": "boolean",
      "default": true
    },
    "extractMasterPages": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenPages": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "extractVariables": {
      "type": "boolean",
      "default": true
    },
    "extractIndexMarkers": {
      "type": "boolean",
      "default": true
    },
    "extractLinks": {
      "type": "boolean",
      "default": false
    },
    "extractPgfNumFormatsInline": {
      "type": "boolean",
      "default": false
    },
    "extractReferenceFormats": {
      "type": "boolean",
      "default": false
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization"
    }
  },
  "additionalProperties": false
}