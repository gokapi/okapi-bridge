{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_idml.schema.json",
  "$version": "1.0.0",
  "title": "IDML Filter Filter",
  "description": "Configuration for the Okapi IDML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_idml",
    "class": "net.sf.okapi.filters.idml.IDMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/vnd.adobe.indesign-idml-package"
    ],
    "configurations": [
      {
        "configId": "okf_idml",
        "name": "IDML",
        "description": "Adobe InDesign IDML documents",
        "mimeType": "application/vnd.adobe.indesign-idml-package",
        "extensions": ".idml;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.idml.IDMLFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "untagXmlStructures": {
      "type": "boolean",
      "default": true
    },
    "extractNotes": {
      "type": "boolean",
      "default": false
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenLayers": {
      "type": "boolean",
      "default": false
    },
    "extractHiddenPasteboardItems": {
      "type": "boolean",
      "default": false
    },
    "skipDiscretionaryHyphens": {
      "type": "boolean",
      "default": false
    },
    "extractBreaksInline": {
      "type": "boolean",
      "default": false
    },
    "extractHyperlinkTextSourcesInline": {
      "type": "boolean",
      "default": false
    },
    "extractCustomTextVariables": {
      "type": "boolean",
      "default": false
    },
    "extractIndexTopics": {
      "type": "boolean",
      "default": false
    },
    "ignoreCharacterKerning": {
      "type": "boolean",
      "default": false
    },
    "characterKerningMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterKerningMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterTracking": {
      "type": "boolean",
      "default": false
    },
    "characterTrackingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterTrackingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterLeading": {
      "type": "boolean",
      "default": false
    },
    "characterLeadingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterLeadingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterBaselineShift": {
      "type": "boolean",
      "default": false
    },
    "characterBaselineShiftMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterBaselineShiftMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    }
  },
  "additionalProperties": false
}