{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_vtt.schema.json",
  "$version": "1.0.0",
  "title": "WebVTT Subtitles Filter",
  "description": "Configuration for the Okapi WebVTT Subtitles Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_vtt",
    "class": "net.sf.okapi.filters.vtt.VTTFilter",
    "extensions": [
      ".vtt"
    ],
    "mimeTypes": [
      "text/vtt"
    ]
  },
  "properties": {
    "cueSettings": {
      "type": "string",
      "default": ""
    },
    "discardCues": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false
}