{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_vtt.schema.json",
  "$version": "1.0.0",
  "title": "WebVTT Subtitles Filter",
  "description": "Configuration for the Okapi WebVTT Subtitles Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_vtt",
    "class": "net.sf.okapi.filters.vtt.VTTFilter",
    "extensions": [
      ".vtt"
    ],
    "mimeTypes": [
      "text/vtt"
    ]
  },
  "properties": {
    "cueSettings": {
      "type": "string",
      "default": "",
      "title": "Replace existing cue settings with text"
    },
    "discardCues": {
      "type": "boolean",
      "default": false,
      "title": "Discard existing cue settings"
    },
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit"
    }
  },
  "additionalProperties": false
}