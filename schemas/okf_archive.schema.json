{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_archive.schema.json",
  "$version": "1.0.0",
  "title": "Archive (ZIP) Filter",
  "description": "Configuration for the Okapi Archive (ZIP) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_archive",
    "class": "net.sf.okapi.filters.archive.ArchiveFilter",
    "extensions": [
      ".zip",
      ".jar"
    ],
    "mimeTypes": [
      "application/zip"
    ]
  },
  "properties": {
    "mimeType": {
      "type": "string",
      "default": "application/x-archive"
    },
    "fileNames": {
      "type": "string",
      "default": "*.tmx,*.xlf,*.xlff"
    },
    "configIds": {
      "type": "string",
      "default": "okf_tmx,okf_xliff,okf_xliff"
    }
  },
  "additionalProperties": false
}