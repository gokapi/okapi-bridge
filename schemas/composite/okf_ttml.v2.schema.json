{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttml.schema.json",
  "$version": "2.0.0",
  "title": "TTML Filter Filter",
  "description": "Configuration for the Okapi TTML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttml",
    "class": "net.sf.okapi.filters.ttml.TTMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/ttml+xml"
    ]
  },
  "properties": {
    "timeFormat": {
      "type": "string",
      "default": "HH:mm:ss.SSS",
      "title": "Time format",
      "x-widget": "text"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes",
      "x-widget": "checkbox"
    },
    "splitWords": {
      "type": "boolean",
      "default": true,
      "title": "Split words so that they don't go over the char limit",
      "x-widget": "checkbox"
    },
    "writeCharAnnotations": {
      "type": "boolean",
      "default": false,
      "title": "Write character limit info as annotations to xliff",
      "x-widget": "checkbox"
    },
    "mergeCaptions": {
      "type": "boolean",
      "default": true,
      "title": "Merge captions by sentence",
      "x-widget": "checkbox"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "title": "Has inline codes as defined below:",
      "x-widget": "checkbox",
      "description": "Enable inline code detection using regex patterns."
    },
    "codeFinderRules": {
      "type": "string",
      "default": "#v1\ncount.i=1\nrule0=</?([A-Z0-9a-z]*)\\b[^>]*>\nsample=&name; <tag></at><tag/> <tag attr='val'> </tag=\"val\">\nuseAllRulesWhenTesting.b=true",
      "description": "Configure patterns for detecting inline codes.",
      "x-widget": "codeFinder",
      "x-enabledBy": {
        "parameter": "useCodeFinder",
        "enabledWhenSelected": true
      }
    },
    "escapeBrMode": {
      "type": "boolean",
      "default": true,
      "title": "Automatically remove line breaks and re-add them later",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "useCodeFinder",
        "codeFinderRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeBrMode"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "timeFormat",
        "maxLinesPerCaption",
        "maxCharsPerLine",
        "cjkCharsPerLine",
        "keepTimecodes",
        "splitWords",
        "writeCharAnnotations",
        "mergeCaptions"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "51497cb09e9e",
  "x-compositeHash": "5ae736d48f70",
  "x-introducedInOkapi": "1.48.0"
}
