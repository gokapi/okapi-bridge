{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_epub.schema.json",
  "$version": "1.0.0",
  "title": "EPUB Filter Filter",
  "description": "Configuration for the Okapi EPUB Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_epub",
    "class": "net.sf.okapi.filters.epub.EpubFilter",
    "extensions": [],
    "mimeTypes": [
      "application/epub+zip"
    ],
    "configurations": [
      {
        "configId": "okf_epub",
        "name": "EPUB Files",
        "description": "Electronic Publication Files (EPUB)",
        "mimeType": "application/epub+zip",
        "extensions": ".epub;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.epub.EpubFilter"
      }
    ]
  },
  "properties": {
    "mimeType": {
      "type": "string",
      "default": "application/x-archive",
      "title": "MIME type of the filter's container format",
      "x-widget": "text"
    },
    "fileNames": {
      "type": "string",
      "default": "*.tmx,*.xlf,*.xlff",
      "title": "File names",
      "description": "Comma-delimited list of file names to be processed (wildcards are allowed) in the same order as configuration ids",
      "x-widget": "text"
    },
    "configIds": {
      "type": "string",
      "default": "okf_tmx,okf_xliff,okf_xliff",
      "title": "Filter configuration ids",
      "description": "Comma-delimited list of configuration ids corresponding to the file names",
      "x-widget": "text"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "mimeType"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "fileNames",
        "configIds"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
