{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttx.schema.json",
  "$version": "1.0.0",
  "title": "TTX Filter Filter",
  "description": "Configuration for the Okapi TTX Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttx",
    "class": "net.sf.okapi.filters.ttx.TTXFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-ttx+xml"
    ]
  },
  "properties": {
    "segmentMode": {
      "type": "integer",
      "default": 0,
      "title": "Extraction mode",
      "enum": [
        "0",
        "1",
        "2"
      ],
      "x-enumLabels": [
        "Auto-detect existing segments (If found: extract only those, otherwise extract all)",
        "Extract only existing segments",
        "Extract all (existing segments and un-segmented text parts)"
      ],
      "x-widget": "select"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters in output",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "mode",
      "label": "Mode Settings",
      "collapsed": false,
      "fields": [
        "segmentMode"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeGT"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-baseHash": "90e36426044f",
  "x-compositeHash": "b0dd730f1a59",
  "x-introducedInOkapi": "0.38"
}
