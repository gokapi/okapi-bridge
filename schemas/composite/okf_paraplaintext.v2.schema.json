{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_paraplaintext.schema.json",
  "$version": "2.0.0",
  "title": "Plain Text Filter Filter",
  "description": "Configuration for the Okapi Plain Text Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_paraplaintext",
    "class": "net.sf.okapi.filters.plaintext.paragraphs.ParaPlainTextFilter",
    "extensions": [],
    "mimeTypes": [
      "text/plain"
    ],
    "configurations": [
      {
        "configId": "okf_plaintext_paragraphs",
        "name": "Plain Text (Paragraphs)",
        "description": "Text files extracted by paragraphs (separated by 1 or more empty lines).",
        "mimeType": "text/plain",
        "parametersLocation": "okf_plaintext_paragraphs.fprm",
        "parametersRaw": "#v1\nunescapeSource.b=true\ntrimLeading.b=false\ntrimTrailing.b=false\npreserveWS.b=true\nuseCodeFinder.b=false\ncodeFinderRules=#v1$0a$count.i=2$0a$rule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]$0a$rule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v$0a$sample=$0a$useAllRulesWhenTesting.b=false\nwrapMode.i=0\nextractParagraphs.b=true\nparametersClass=net.sf.okapi.filters.plaintext.paragraphs.Parameters\n",
        "parameters": {
          "unescapeSource": true,
          "trimLeading": false,
          "trimTrailing": false,
          "preserveWS": true,
          "useCodeFinder": false,
          "codeFinderRules": "#v1$0a$count.i=2$0a$rule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]$0a$rule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v$0a$sample=$0a$useAllRulesWhenTesting.b=false",
          "wrapMode": 0,
          "extractParagraphs": true,
          "_parametersClass": "net.sf.okapi.filters.plaintext.paragraphs.Parameters"
        },
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.plaintext.paragraphs.ParaPlainTextFilter"
      },
      {
        "configId": "okf_plaintext_paragraphs_lines",
        "name": "Plain Text (Lines)",
        "description": "Text files extracted by lines (each line is a text unit).",
        "mimeType": "text/plain",
        "parametersLocation": "okf_plaintext_paragraphs_lines.fprm",
        "isDefault": false,
        "filterClass": "net.sf.okapi.filters.plaintext.paragraphs.ParaPlainTextFilter"
      }
    ]
  },
  "properties": {
    "extractParagraphs": {
      "type": "boolean",
      "default": true
    },
    "unescapeSource": {
      "type": "boolean",
      "default": true
    },
    "trimLeading": {
      "type": "boolean",
      "default": false
    },
    "trimTrailing": {
      "type": "boolean",
      "default": false
    },
    "preserveWS": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "string",
      "default": "#v1\ncount.i=2\nrule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]\nrule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v\nsample=\nuseAllRulesWhenTesting.b=false",
      "x-widget": "codeFinderRules",
      "description": "Regex patterns to identify inline codes in translatable text"
    },
    "wrapMode": {
      "type": "string",
      "default": "NONE",
      "enum": [
        "NONE",
        "SPACES",
        "PLACEHOLDERS"
      ]
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-introducedInOkapi": "1.46.0",
  "x-baseHash": "5b43f43005ec",
  "x-compositeHash": "899419efbd26"
}
