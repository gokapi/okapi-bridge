{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_pdf.schema.json",
  "$version": "1.0.0",
  "title": "PDF Filter Filter",
  "description": "Configuration for the Okapi PDF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_pdf",
    "class": "net.sf.okapi.filters.pdf.PdfFilter",
    "extensions": [],
    "mimeTypes": [
      "application/pdf"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable inline code detection using regex patterns."
    },
    "indentThreshold": {
      "type": "string",
      "default": "2.0",
      "title": "Amount of indent needed to define a new paragraph (Default=2.0)",
      "x-widget": "text"
    },
    "spacingTolerance": {
      "type": "string",
      "default": "0.5",
      "title": "Amount of spacing needed to define a white space character (Default=0.5)",
      "x-widget": "text"
    },
    "preserveWhitespace": {
      "type": "boolean",
      "default": false,
      "title": "Preserve whitespace",
      "x-widget": "checkbox",
      "description": "Preserve whitespace exactly as in source."
    },
    "lineSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as line separator",
      "x-widget": "text"
    },
    "paragraphSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as paragraph separator",
      "x-widget": "text"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "useCodeFinder",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "indentThreshold",
        "spacingTolerance",
        "preserveWhitespace",
        "lineSeparator",
        "paragraphSeparator",
        "sortByPosition"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-baseHash": "2728a590126e",
  "x-compositeHash": "4ac860d4ea05",
  "x-introducedInOkapi": "0.38"
}
