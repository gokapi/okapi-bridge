{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_pdf.schema.json",
  "$version": "1.0.0",
  "title": "PDF Filter Filter",
  "description": "Configuration for the Okapi PDF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_pdf",
    "class": "net.sf.okapi.filters.pdf.PdfFilter",
    "extensions": [],
    "mimeTypes": [
      "application/pdf"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "indentThreshold": {
      "type": "string",
      "default": "2.0",
      "title": "Amount of indent needed to define a new paragraph (Default=2.0)"
    },
    "spacingTolerance": {
      "type": "string",
      "default": "0.5",
      "title": "Amount of spacing needed to define a white space character (Default=0.5)"
    },
    "preserveWhitespace": {
      "type": "boolean",
      "default": false,
      "title": "Preserve whitespace"
    },
    "lineSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as line separator"
    },
    "paragraphSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as paragraph separator"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-introducedInOkapi": "0.38",
  "x-okapiVersions": [
    "0.38"
  ],
  "x-baseHash": "78581a354f37",
  "x-compositeHash": "78581a354f37"
}