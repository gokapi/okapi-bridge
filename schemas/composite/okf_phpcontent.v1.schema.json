{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_phpcontent.schema.json",
  "$version": "1.0.0",
  "title": "PHP Content Filter Filter",
  "description": "Configuration for the Okapi PHP Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_phpcontent",
    "class": "net.sf.okapi.filters.php.PHPContentFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-php"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "title": "Has inline codes as defined below:"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "useDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Use localization directives"
    },
    "extractOutsideDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Extract outside the scope of the directives",
      "x-enabledBy": {
        "parameter": "useDirectives",
        "enabledWhenSelected": true
      }
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-introducedInOkapi": "0.38",
  "x-okapiVersions": [
    "0.38"
  ],
  "x-baseHash": "e4a94a9c28ac",
  "x-compositeHash": "e4a94a9c28ac"
}