{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_icml.schema.json",
  "$version": "3.0.0",
  "title": "ICML Filter Filter",
  "description": "Configuration for the Okapi ICML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_icml",
    "class": "net.sf.okapi.filters.icml.ICMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-icml+xml"
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "title": "Extract notes",
      "x-widget": "checkbox"
    },
    "simplifyCodes": {
      "type": "boolean",
      "default": true,
      "title": "Simplify inline codes when possible",
      "x-widget": "checkbox"
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true,
      "title": "Extract master spreads",
      "x-widget": "checkbox"
    },
    "skipThreshold": {
      "type": "integer",
      "default": 1000,
      "title": "Maximum spread size",
      "description": "Skip any spread larger than the given value (in Kbytes)",
      "minimum": 1,
      "maximum": 32000,
      "x-widget": "spin"
    },
    "newTuOnBr": {
      "type": "boolean",
      "default": false,
      "title": "Create new paragraphs on hard returns (<Br/> elements)"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object"
    },
    "mergeAdjacentCodes": {
      "type": "object"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "fb4fc1a4631b",
  "x-compositeHash": "fb4fc1a4631b",
  "x-introducedInOkapi": "1.48.0"
}
