{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_phpcontent.schema.json",
  "$version": "2.0.0",
  "title": "PHP Content Filter Filter",
  "description": "Configuration for the Okapi PHP Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_phpcontent",
    "class": "net.sf.okapi.filters.php.PHPContentFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-php"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "title": "Has inline codes as defined below:",
      "x-widget": "checkbox",
      "description": "Enable inline code detection using regex patterns."
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Configure patterns for detecting inline codes.",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "useDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Use localization directives",
      "x-widget": "checkbox"
    },
    "extractOutsideDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Extract outside the scope of the directives",
      "x-widget": "checkbox",
      "x-enabledBy": {
        "parameter": "useDirectives",
        "enabledWhenSelected": true
      }
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "extractOutsideDirectives"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "useDirectives"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "7bd215ed6f7e",
  "x-compositeHash": "f1ebe02bca75",
  "x-introducedInOkapi": "1.48.0"
}
