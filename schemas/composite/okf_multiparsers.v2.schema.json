{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_multiparsers.schema.json",
  "$version": "2.0.0",
  "title": "Multi-Parsers Filter Filter",
  "description": "Configuration for the Okapi Multi-Parsers Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_multiparsers",
    "class": "net.sf.okapi.filters.multiparsers.MultiParsersFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-multiparsers"
    ],
    "configurations": [
      {
        "configId": "okf_multiparsers",
        "name": "Multi-Parsers: CSV with Plain-Text",
        "description": "Configuration for CSV files with plain-text on all columns",
        "mimeType": "text/csv",
        "extensions": ".csv;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.multiparsers.MultiParsersFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "csvNoExtractCols": {
      "type": "string",
      "default": "",
      "title": "Comma-separated list of the colums not to extract (first=0)",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvFormatCols": {
      "type": "string",
      "default": "",
      "title": "Comma-separated list of the colums with non-plain-text content (e.g. '3:okf_markdown', first=0)",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvStartingRow": {
      "type": "integer",
      "default": 1,
      "title": "Row at which the extraction starts (first=1)",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvAutoDetectColumnTypes": {
      "type": "boolean",
      "default": false,
      "title": "Use auto-detection (a special row in each input file)",
      "x-widget": "checkbox"
    },
    "csvAutoDetectColumnTypesRow": {
      "type": "integer",
      "default": 2,
      "title": "Row at which the special configuration information is (first=1)",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": true
      }
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "csvNoExtractCols"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "csvFormatCols",
        "csvStartingRow",
        "csvAutoDetectColumnTypes",
        "csvAutoDetectColumnTypesRow"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "31ff8cbbd6ff",
  "x-compositeHash": "35317dd3681d",
  "x-introducedInOkapi": "0.38"
}
