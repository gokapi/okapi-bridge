{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_vtt.schema.json",
  "$version": "1.0.0",
  "title": "VTT Filter Filter",
  "description": "Configuration for the Okapi VTT Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_vtt",
    "class": "net.sf.okapi.filters.vtt.VTTFilter",
    "extensions": [],
    "mimeTypes": [
      "text/vtt"
    ]
  },
  "properties": {
    "cueSettings": {
      "type": "string",
      "default": "",
      "title": "Replace existing cue settings with text",
      "x-enabledBy": {
        "parameter": "discardCues",
        "enabledWhenSelected": false
      }
    },
    "discardCues": {
      "type": "boolean",
      "default": false,
      "title": "Discard existing cue settings"
    },
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-introducedInOkapi": "1.46.0",
  "x-okapiVersions": [
    "1.46.0"
  ],
  "x-baseHash": "5e4d5e75a18e",
  "x-compositeHash": "5e4d5e75a18e"
}