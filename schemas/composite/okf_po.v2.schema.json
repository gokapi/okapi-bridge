{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_po.schema.json",
  "$version": "2.0.0",
  "title": "PO Filter Filter",
  "description": "Configuration for the Okapi PO Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_po",
    "class": "net.sf.okapi.filters.po.POFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-gettext"
    ]
  },
  "properties": {
    "protectApproved": {
      "type": "boolean",
      "default": false
    },
    "allowEmptyOutputTarget": {
      "type": "boolean",
      "default": false
    },
    "bilingualMode": {
      "type": "boolean",
      "default": true
    },
    "makeID": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "includeMsgContextInNote": {
      "type": "boolean",
      "default": false
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-introducedInOkapi": "0.38",
  "x-baseHash": "c84197001d8b",
  "x-compositeHash": "c84197001d8b"
}
