{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_po.schema.json",
  "$version": "2.0.0",
  "title": "PO Filter Filter",
  "description": "Configuration for the Okapi PO Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_po",
    "class": "net.sf.okapi.filters.po.POFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-gettext"
    ]
  },
  "properties": {
    "protectApproved": {
      "type": "boolean",
      "default": false,
      "description": "Protect approved translations from changes."
    },
    "allowEmptyOutputTarget": {
      "type": "boolean",
      "default": false,
      "description": "Allow empty target in output when no translation."
    },
    "bilingualMode": {
      "type": "boolean",
      "default": true,
      "description": "Process file in bilingual mode (source and target)."
    },
    "makeID": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable inline code detection using regex patterns."
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Configure patterns for detecting inline codes.",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "includeMsgContextInNote": {
      "type": "boolean",
      "default": false
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "includeMsgContextInNote"
      ]
    },
    {
      "id": "mode",
      "label": "Mode Settings",
      "collapsed": true,
      "fields": [
        "bilingualMode"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "makeID"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "protectApproved",
        "allowEmptyOutputTarget"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "de63aec0af92",
  "x-compositeHash": "2861a0fe5771",
  "x-introducedInOkapi": "1.48.0"
}
