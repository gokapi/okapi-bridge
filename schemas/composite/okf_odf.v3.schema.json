{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_odf.schema.json",
  "$version": "3.0.0",
  "title": "ODF-Content Filter Filter",
  "description": "Configuration for the Okapi ODF-Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_odf",
    "class": "net.sf.okapi.filters.openoffice.ODFFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-odf"
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "description": "Extract notes/comments for translators."
    },
    "extractReferences": {
      "type": "boolean",
      "default": false
    },
    "extractMetadata": {
      "type": "boolean",
      "default": true
    },
    "encodeCharacterEntityReferenceGlyphs": {
      "type": "boolean",
      "default": true
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "extractNotes",
        "extractReferences",
        "extractMetadata"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "encodeCharacterEntityReferenceGlyphs"
      ]
    }
  ],
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "e9845baf52a0",
  "x-compositeHash": "48842b37c4ba",
  "x-introducedInOkapi": "1.48.0"
}
