{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttml.schema.json",
  "$version": "1.0.0",
  "title": "TTML Filter Filter",
  "description": "Configuration for the Okapi TTML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttml",
    "class": "net.sf.okapi.filters.ttml.TTMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/ttml+xml"
    ],
    "configurations": [
      {
        "configId": "okf_ttml",
        "name": "TTML",
        "description": "TTML Documents",
        "mimeType": "application/ttml+xml",
        "extensions": ".ttml",
        "parametersLocation": "okf_ttml.fprm",
        "parametersRaw": "#v1\ntimeFormat=HH:mm:ss.SSS\nmaxLinesPerCaption.i=2\nmaxCharsPerLine.i=47\ncjkCharsPerLine.i=18\n",
        "parameters": {
          "timeFormat": "HH:mm:ss.SSS",
          "maxLinesPerCaption": 2,
          "maxCharsPerLine": 47,
          "cjkCharsPerLine": 18
        },
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.ttml.TTMLFilter"
      }
    ]
  },
  "properties": {
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format",
      "x-widget": "text"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes",
      "x-widget": "checkbox"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "timeFormat",
        "maxLinesPerCaption",
        "maxCharsPerLine",
        "cjkCharsPerLine",
        "keepTimecodes",
        "splitWords",
        "writeCharAnnotations",
        "mergeCaptions"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeBrMode"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-introducedInOkapi": "1.46.0",
  "x-baseHash": "a29df30fdba0",
  "x-compositeHash": "861197726f00"
}
