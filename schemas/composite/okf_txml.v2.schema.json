{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_txml.schema.json",
  "$version": "2.0.0",
  "title": "TXML Filter Filter",
  "description": "Configuration for the Okapi TXML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_txml",
    "class": "net.sf.okapi.filters.txml.TXMLFilter",
    "extensions": [],
    "mimeTypes": [
      "text/xml"
    ]
  },
  "properties": {
    "allowEmptyOutputTarget": {
      "type": "boolean",
      "default": true,
      "title": "Allow empty target segments in output",
      "x-widget": "checkbox",
      "description": "Allow empty target in output when no translation."
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "allowEmptyOutputTarget"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "18fb2e7a310c",
  "x-compositeHash": "3f1feb5e142c",
  "x-introducedInOkapi": "1.48.0"
}
