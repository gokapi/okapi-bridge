{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_properties.schema.json",
  "$version": "2.0.0",
  "title": "Properties Filter Filter",
  "description": "Configuration for the Okapi Properties Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_properties",
    "class": "net.sf.okapi.filters.properties.PropertiesFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-properties"
    ]
  },
  "properties": {
    "useLd": {
      "type": "boolean",
      "default": false
    },
    "localizeOutside": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "convertLFandTab": {
      "type": "boolean",
      "default": true
    },
    "useKeyCondition": {
      "type": "boolean",
      "default": false
    },
    "extractOnlyMatchingKey": {
      "type": "boolean",
      "default": true
    },
    "keyCondition": {
      "type": "string",
      "default": ".*text.*"
    },
    "extraComments": {
      "type": "boolean",
      "default": false
    },
    "commentsAreNotes": {
      "type": "boolean",
      "default": true
    },
    "escapeExtendedChars": {
      "type": "boolean",
      "default": true
    },
    "idLikeResname": {
      "type": "boolean",
      "default": false
    },
    "useJavaEscapes": {
      "type": "boolean",
      "default": false
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "723b72e6961a",
  "x-compositeHash": "723b72e6961a"
}
