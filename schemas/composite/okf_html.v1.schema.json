{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_html.schema.json",
  "$version": "1.0.0",
  "title": "HTML/XHTML Filter Filter",
  "description": "Configuration for the Okapi HTML/XHTML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_html",
    "class": "net.sf.okapi.filters.html.HtmlFilter",
    "extensions": [],
    "mimeTypes": [
      "text/html"
    ]
  },
  "properties": {
    "taggedConfig": {
      "type": "object"
    },
    "editorTitle": {
      "type": "string",
      "default": "Parameters Editor"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "attributes",
      "label": "Attribute Handling",
      "description": "Configure which attributes to extract",
      "collapsed": true,
      "fields": [
        "translatableAttributes",
        "idAttributes"
      ]
    },
    {
      "id": "elements",
      "label": "Element Handling",
      "description": "Configure which elements to extract",
      "collapsed": true,
      "fields": [
        "extractMetaTitle",
        "extractMetaDescription",
        "extractComments",
        "excludeElements"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "parserMode",
      "label": "Parser Mode",
      "description": "Configure HTML parsing behavior",
      "collapsed": false,
      "fields": [
        "assumeWellformed",
        "extractOuterStrings"
      ]
    },
    {
      "id": "whitespace",
      "label": "Whitespace Handling",
      "description": "Control how whitespace is processed in extracted text",
      "collapsed": true,
      "fields": [
        "preserveWhitespace",
        "collapseWhitespace",
        "trimLeadingWS",
        "trimTrailingWS"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-baseHash": "be1789473bdc",
  "x-compositeHash": "a7239e363dd3",
  "x-introducedInOkapi": "0.38"
}
