{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xliff2.schema.json",
  "$version": "13.0.0",
  "title": "XLIFF-2 Filter Filter",
  "description": "Configuration for the Okapi XLIFF-2 Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xliff2",
    "class": "net.sf.okapi.filters.xliff2.XLIFF2Filter",
    "extensions": [],
    "mimeTypes": [
      "application/xliff+xml"
    ],
    "configurations": [
      {
        "configId": "okf_xliff2",
        "name": "XLIFF-2",
        "description": "Configuration for XLIFF-2 documents.",
        "mimeType": "application/xliff+xml",
        "extensions": ".xlf;.xliff;.xlf2;.xliff2",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.xliff2.XLIFF2Filter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "maxValidation": {
      "type": "boolean",
      "default": true,
      "title": "Perform maximum validation when parsing",
      "x-widget": "checkbox"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "title": "Has inline codes as defined below:",
      "x-widget": "checkbox"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "simplifyTags": {
      "type": "boolean",
      "default": false
    },
    "needsSegmentation": {
      "type": "boolean",
      "default": false
    },
    "forceUniqueIds": {
      "type": "boolean",
      "default": false,
      "title": "Ensure tag IDs are unique within units",
      "x-widget": "checkbox"
    },
    "ignoreTagTypeMatch": {
      "type": "boolean",
      "default": false,
      "title": "Ignore tag type mismatch between source and target",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": [
        "extractSource",
        "extractTarget",
        "extractNotes"
      ]
    },
    {
      "id": "states",
      "label": "State Handling",
      "description": "Control how XLIFF 2.x states are handled",
      "collapsed": true,
      "fields": [
        "includeInitial",
        "includeTranslated",
        "includeReviewed",
        "includeFinal"
      ]
    },
    {
      "id": "metadata",
      "label": "Metadata",
      "description": "Configure metadata extraction",
      "collapsed": true,
      "fields": [
        "extractMetadata",
        "extractChanges"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": [
        "copySource",
        "useApprovedOnly",
        "preserveSegmentation"
      ]
    }
  ],
  "x-schemaVersion": 13,
  "x-baseVersion": 13,
  "x-baseHash": "d152b1c695b3",
  "x-compositeHash": "46c2ce41ab2a",
  "x-introducedInOkapi": "1.46.0"
}
