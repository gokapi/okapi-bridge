{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_mif.schema.json",
  "$version": "5.0.0",
  "title": "MIF Filter Filter",
  "description": "Configuration for the Okapi MIF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_mif",
    "class": "net.sf.okapi.filters.mif.MIFFilter",
    "extensions": [],
    "mimeTypes": [
      "application/vnd.mif"
    ]
  },
  "properties": {
    "extractBodyPages": {
      "type": "boolean",
      "default": true
    },
    "extractReferencePages": {
      "type": "boolean",
      "default": true
    },
    "extractMasterPages": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenPages": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable inline code detection using regex patterns."
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Configure patterns for detecting inline codes.",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "extractVariables": {
      "type": "boolean",
      "default": true
    },
    "extractIndexMarkers": {
      "type": "boolean",
      "default": true
    },
    "extractLinks": {
      "type": "boolean",
      "default": false
    },
    "extractPgfNumFormatsInline": {
      "type": "boolean",
      "default": false
    },
    "extractReferenceFormats": {
      "type": "boolean",
      "default": false
    },
    "extractHardReturnsAsText": {
      "type": "boolean",
      "default": true
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "extractBodyPages",
        "extractReferencePages",
        "extractMasterPages",
        "extractHiddenPages",
        "extractVariables",
        "extractIndexMarkers",
        "extractLinks",
        "extractPgfNumFormatsInline",
        "extractReferenceFormats",
        "extractHardReturnsAsText"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 5,
  "x-baseVersion": 5,
  "x-baseHash": "773dfdc97991",
  "x-compositeHash": "94e65e943551",
  "x-introducedInOkapi": "1.48.0"
}
