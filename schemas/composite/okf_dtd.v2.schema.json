{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_dtd.schema.json",
  "$version": "2.0.0",
  "title": "DTD Filter Filter",
  "description": "Configuration for the Okapi DTD Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_dtd",
    "class": "net.sf.okapi.filters.dtd.DTDFilter",
    "extensions": [],
    "mimeTypes": [
      "application/xml+dtd"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable inline code detection using regex patterns."
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "useCodeFinder",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "e4f5e52404aa",
  "x-compositeHash": "bb036b0daedc",
  "x-introducedInOkapi": "1.48.0"
}
