{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_transifex.schema.json",
  "$version": "2.0.0",
  "title": "Transifex Filter Filter",
  "description": "Configuration for the Okapi Transifex Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_transifex",
    "class": "net.sf.okapi.filters.transifex.TransifexFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-transifex"
    ]
  },
  "properties": {
    "openProject": {
      "type": "boolean",
      "default": true,
      "title": "Open the project file before processing",
      "x-widget": "checkbox"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "openProject"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "1f14c62a384c",
  "x-compositeHash": "564afb8afe88",
  "x-introducedInOkapi": "1.48.0"
}
