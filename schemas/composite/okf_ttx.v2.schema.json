{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttx.schema.json",
  "$version": "2.0.0",
  "title": "TTX Filter Filter",
  "description": "Configuration for the Okapi TTX Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttx",
    "class": "net.sf.okapi.filters.ttx.TTXFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-ttx+xml"
    ]
  },
  "properties": {
    "segmentMode": {
      "type": "integer",
      "default": 0,
      "title": "Extraction mode",
      "enum": [
        "0",
        "1",
        "2"
      ],
      "x-enumLabels": [
        "Auto-detect existing segments (If found: extract only those, otherwise extract all)",
        "Extract only existing segments",
        "Extract all (existing segments and un-segmented text parts)"
      ],
      "x-widget": "select"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters in output",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "mode",
      "label": "Mode Settings",
      "collapsed": false,
      "fields": [
        "segmentMode"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeGT"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "f084299bc840",
  "x-compositeHash": "c84da3366355",
  "x-introducedInOkapi": "1.48.0"
}
