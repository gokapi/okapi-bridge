{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xliff.schema.json",
  "$version": "3.0.0",
  "title": "XLIFF Filter Filter",
  "description": "Configuration for the Okapi XLIFF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xliff",
    "class": "net.sf.okapi.filters.xliff.XLIFFFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-xliff+xml"
    ]
  },
  "properties": {
    "addAltTrans": {
      "type": "boolean",
      "default": false
    },
    "addAltTransGMode": {
      "type": "boolean",
      "default": true
    },
    "editAltTrans": {
      "type": "boolean",
      "default": false
    },
    "useCustomParser": {
      "type": "boolean",
      "default": true
    },
    "factoryClass": {
      "type": "string",
      "default": "com.ctc.wstx.stax.WstxInputFactory"
    },
    "fallbackToID": {
      "type": "boolean",
      "default": false
    },
    "addTargetLanguage": {
      "type": "boolean",
      "default": true
    },
    "overrideTargetLanguage": {
      "type": "boolean",
      "default": false
    },
    "allowEmptyTargets": {
      "type": "boolean",
      "default": false
    },
    "outputSegmentationType": {
      "type": "string"
    },
    "ignoreInputSegmentation": {
      "type": "boolean",
      "default": false
    },
    "includeExtensions": {
      "type": "boolean",
      "default": true
    },
    "targetStateMode": {
      "type": "integer",
      "default": 0
    },
    "targetStateValue": {
      "type": "string",
      "default": "needs-translation"
    },
    "includeIts": {
      "type": "boolean",
      "default": true
    },
    "alwaysUseSegSource": {
      "type": "boolean",
      "default": false
    },
    "preserveSpaceByDefault": {
      "type": "boolean",
      "default": false
    },
    "useSdlXliffWriter": {
      "type": "boolean",
      "default": false
    },
    "sdlSegLockedValue": {
      "type": "string",
      "default": ""
    },
    "sdlSegConfValue": {
      "type": "string",
      "default": ""
    },
    "sdlSegOriginValue": {
      "type": "string",
      "default": ""
    },
    "skipNoMrkSegSource": {
      "type": "boolean",
      "default": false
    },
    "subAsTextUnit": {
      "type": "boolean",
      "default": false
    },
    "useSegsForSdlProps": {
      "type": "boolean",
      "default": false
    },
    "useTranslationTargetState": {
      "type": "boolean",
      "default": true
    },
    "useIwsXliffWriter": {
      "type": "boolean",
      "default": false
    },
    "iwsBlockFinished": {
      "type": "boolean",
      "default": true
    },
    "iwsTransStatusValue": {
      "type": "string",
      "default": "finished"
    },
    "iwsRemoveTmOrigin": {
      "type": "boolean",
      "default": false
    },
    "iwsTransTypeValue": {
      "type": "string",
      "default": "manual_translation"
    },
    "iwsBlockLockStatus": {
      "type": "boolean",
      "default": false
    },
    "iwsBlockTmScore": {
      "type": "boolean",
      "default": false
    },
    "iwsBlockTmScoreValue": {
      "type": "string",
      "default": "100.00"
    },
    "iwsIncludeMultipleExact": {
      "type": "boolean",
      "default": false
    },
    "iwsBlockMultipleExact": {
      "type": "boolean",
      "default": false
    },
    "inlineCdata": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "cdataSubfilter": {
      "type": "string",
      "default": ""
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": [
        "extractSource",
        "extractTarget",
        "extractNotes"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": [
        "copySource",
        "useApprovedOnly"
      ]
    },
    {
      "id": "states",
      "label": "State Handling",
      "description": "Control how translation states are handled",
      "collapsed": true,
      "fields": [
        "includeNotTranslated",
        "includeTranslated",
        "includeReviewNeeded",
        "includeFinal"
      ]
    }
  ],
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "353e779d97f5",
  "x-compositeHash": "ccf1965fed56"
}
