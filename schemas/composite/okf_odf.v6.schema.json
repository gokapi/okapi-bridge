{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_odf.schema.json",
  "$version": "6.0.0",
  "title": "ODF-Content Filter Filter",
  "description": "Configuration for the Okapi ODF-Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_odf",
    "class": "net.sf.okapi.filters.openoffice.ODFFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-odf"
    ],
    "configurations": [
      {
        "configId": "okf_odf",
        "name": "OpenDocument",
        "description": "XML OpenDocument files (e.g. use inside OpenOffice.org documents).",
        "mimeType": "text/x-odf",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.openoffice.ODFFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "description": "Extract notes/comments as translator notes"
    },
    "extractReferences": {
      "type": "boolean",
      "default": false
    },
    "extractMetadata": {
      "type": "boolean",
      "default": true,
      "description": "Extract metadata fields for translation"
    },
    "encodeCharacterEntityReferenceGlyphs": {
      "type": "boolean",
      "default": true
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "boolean",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted for translation",
      "collapsed": false,
      "fields": [
        "extractAllPairs",
        "extractSource",
        "extractTarget",
        "extractNotes",
        "extractComments",
        "extractMetadata",
        "extractOuterStrings"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "encodeCharacterEntityReferenceGlyphs"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 6,
  "x-baseVersion": 6,
  "x-introducedInOkapi": "1.48.0",
  "x-baseHash": "4e19d685c87b",
  "x-compositeHash": "cddc9ad35fa6"
}
