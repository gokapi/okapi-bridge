{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_mif.schema.json",
  "$version": "7.0.0",
  "title": "MIF Filter Filter",
  "description": "Configuration for the Okapi MIF Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_mif",
    "class": "net.sf.okapi.filters.mif.MIFFilter",
    "extensions": [],
    "mimeTypes": [
      "application/vnd.mif"
    ],
    "configurations": [
      {
        "configId": "okf_mif",
        "name": "MIF (BETA)",
        "description": "Adobe FrameMaker MIF documents",
        "mimeType": "application/vnd.mif",
        "extensions": ".mif;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.mif.MIFFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "extractBodyPages": {
      "type": "boolean",
      "default": true
    },
    "extractReferencePages": {
      "type": "boolean",
      "default": true
    },
    "extractMasterPages": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenPages": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "extractVariables": {
      "type": "boolean",
      "default": true
    },
    "extractIndexMarkers": {
      "type": "boolean",
      "default": true
    },
    "extractLinks": {
      "type": "boolean",
      "default": false
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 7,
  "x-baseVersion": 7,
  "x-introducedInOkapi": "0.38",
  "x-baseHash": "7c4bb690c5d7",
  "x-compositeHash": "4400f73c942f"
}
