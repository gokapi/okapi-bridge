{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_sdlpackage.schema.json",
  "$version": "4.0.0",
  "title": "SDLPPX and SDLRPX Filter (BETA) Filter",
  "description": "Configuration for the Okapi SDLPPX and SDLRPX Filter (BETA) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_sdlpackage",
    "class": "net.sf.okapi.filters.sdlpackage.SdlPackageFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-sdlpackage"
    ],
    "configurations": [
      {
        "configId": "okf_sdlpackage",
        "name": "SDL Trados Package Files",
        "description": "SDL Trados 2017 SDLPPX and SDLRPX files",
        "mimeType": "application/x-sdlpackage",
        "extensions": ".sdlppx;.sdlrpx;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.sdlpackage.SdlPackageFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "mimeType": {
      "type": "string",
      "default": "application/x-archive",
      "title": "MIME type of the filter's container format",
      "x-widget": "text"
    },
    "fileNames": {
      "type": "string",
      "default": "*.tmx,*.xlf,*.xlff",
      "title": "File names",
      "description": "Comma-delimited list of file names to be processed (wildcards are allowed) in the same order as configuration ids",
      "x-widget": "text"
    },
    "configIds": {
      "type": "string",
      "default": "okf_tmx,okf_xliff,okf_xliff",
      "title": "Filter configuration ids",
      "description": "Comma-delimited list of configuration ids corresponding to the file names",
      "x-widget": "text"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "mimeType"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "fileNames",
        "configIds"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 4,
  "x-baseVersion": 4,
  "x-introducedInOkapi": "0.38",
  "x-baseHash": "f1273161e342",
  "x-compositeHash": "5983f46f8900"
}
