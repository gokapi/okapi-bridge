{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_messageformat.schema.json",
  "$version": "1.0.0",
  "title": "Message Format Filter Filter",
  "description": "Configuration for the Okapi Message Format Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_messageformat",
    "class": "net.sf.okapi.filters.messageformat.MessageFormatFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-messageformat"
    ],
    "configurations": [
      {
        "configId": "okf_messageformat",
        "name": "ICU Message Format",
        "description": "ICU Message Format Text",
        "mimeType": "text/x-messageformat",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.messageformat.MessageFormatFilter"
      }
    ]
  },
  "properties": {
    "addPluralForms": {
      "type": "boolean",
      "default": false
    },
    "normalize": {
      "type": "boolean",
      "default": false
    },
    "prettyPrint": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "addPluralForms",
        "normalize",
        "prettyPrint"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-introducedInOkapi": "1.46.0",
  "x-baseHash": "a4e4128fd033",
  "x-compositeHash": "966b6b325a70"
}
