{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ts.schema.json",
  "$version": "4.0.0",
  "title": "TS Filter Filter",
  "description": "Configuration for the Okapi TS Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ts",
    "class": "net.sf.okapi.filters.ts.TsFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-ts"
    ],
    "configurations": [
      {
        "configId": "okf_ts",
        "name": "TS",
        "description": "Configuration for Qt TS files.",
        "mimeType": "application/x-ts",
        "extensions": ".ts;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.ts.TsFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "escapeGT": {
      "type": "boolean",
      "default": false
    },
    "decodeByteValues": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "boolean",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "decodeByteValues"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeGT"
      ]
    }
  ],
  "x-schemaVersion": 4,
  "x-baseVersion": 4,
  "x-baseHash": "e16d53f82f0c",
  "x-compositeHash": "2153f66e44ad",
  "x-introducedInOkapi": "1.48.0"
}
