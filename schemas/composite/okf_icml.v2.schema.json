{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_icml.schema.json",
  "$version": "2.0.0",
  "title": "ICML Filter Filter",
  "description": "Configuration for the Okapi ICML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_icml",
    "class": "net.sf.okapi.filters.icml.ICMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-icml+xml"
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "title": "Extract notes",
      "x-widget": "checkbox",
      "description": "Extract notes/comments as translator notes"
    },
    "simplifyCodes": {
      "type": "boolean",
      "default": true,
      "title": "Simplify inline codes when possible",
      "x-widget": "checkbox"
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true,
      "title": "Extract master spreads",
      "x-widget": "checkbox"
    },
    "skipThreshold": {
      "type": "integer",
      "default": 1000,
      "title": "Maximum spread size",
      "description": "Skip any spread larger than the given value (in Kbytes)",
      "minimum": 1,
      "maximum": 32000,
      "x-widget": "spin"
    },
    "newTuOnBr": {
      "type": "boolean",
      "default": false,
      "title": "Create new paragraphs on hard returns (<Br/> elements)"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted for translation",
      "collapsed": false,
      "fields": [
        "extractAllPairs",
        "extractSource",
        "extractTarget",
        "extractNotes",
        "extractComments",
        "extractMetadata",
        "extractOuterStrings"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "simplifyCodes",
        "skipThreshold",
        "newTuOnBr"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "7d49f8f0e093",
  "x-compositeHash": "f9b84ef4f7f2"
}
