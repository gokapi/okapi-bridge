{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_tmx.schema.json",
  "$version": "2.0.0",
  "title": "TMX Filter Filter",
  "description": "Configuration for the Okapi TMX Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_tmx",
    "class": "net.sf.okapi.filters.tmx.TmxFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-tmx+xml"
    ],
    "configurations": [
      {
        "configId": "okf_tmx",
        "name": "TMX",
        "description": "Configuration for Translation Memory eXchange (TMX) documents.",
        "mimeType": "application/x-tmx+xml",
        "extensions": ".tmx;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.tmx.TmxFilter"
      }
    ]
  },
  "properties": {
    "segType": {
      "type": "integer",
      "default": 2,
      "title": "Creates or not a segment for the extracted <Tu>"
    },
    "processAllTargets": {
      "type": "boolean",
      "default": true,
      "title": "Read all target entries"
    },
    "consolidateDpSkeleton": {
      "type": "boolean",
      "default": true,
      "title": "Group all document parts skeleton into one"
    },
    "exitOnInvalid": {
      "type": "boolean",
      "default": false,
      "title": "Exit when encountering invalid <tu>s (default is to skip invalid <tu>s)."
    },
    "propValueSep": {
      "type": "string",
      "default": ", ",
      "title": "String used to delimit property values when there are duplicate properties"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "boolean",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "segType",
        "processAllTargets",
        "propValueSep"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "consolidateDpSkeleton",
        "exitOnInvalid"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeGT"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-introducedInOkapi": "1.48.0",
  "x-baseHash": "553eb91b7135",
  "x-compositeHash": "9a5f9a036c66"
}
