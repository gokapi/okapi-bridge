{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_epub.schema.json",
  "$version": "2.0.0",
  "title": "EPUB Filter Filter",
  "description": "Configuration for the Okapi EPUB Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_epub",
    "class": "net.sf.okapi.filters.epub.EpubFilter",
    "extensions": [],
    "mimeTypes": [
      "application/epub+zip"
    ]
  },
  "properties": {
    "mimeType": {
      "type": "string",
      "default": "application/x-archive",
      "title": "MIME type of the filter's container format",
      "x-widget": "text"
    },
    "fileNames": {
      "type": "string",
      "default": "*.tmx,*.xlf,*.xlff",
      "title": "File names",
      "description": "Comma-delimited list of file names to be processed (wildcards are allowed) in the same order as configuration ids",
      "x-widget": "text"
    },
    "configIds": {
      "type": "string",
      "default": "okf_tmx,okf_xliff,okf_xliff",
      "title": "Filter configuration ids",
      "description": "Comma-delimited list of configuration ids corresponding to the file names",
      "x-widget": "text"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "fileNames",
        "configIds"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "mimeType"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "5e5875027db9",
  "x-compositeHash": "579f31233e3e",
  "x-introducedInOkapi": "1.48.0"
}
