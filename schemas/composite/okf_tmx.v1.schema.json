{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_tmx.schema.json",
  "$version": "1.0.0",
  "title": "TMX Filter Filter",
  "description": "Configuration for the Okapi TMX Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_tmx",
    "class": "net.sf.okapi.filters.tmx.TmxFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-tmx+xml"
    ]
  },
  "properties": {
    "segType": {
      "type": "integer",
      "default": 2,
      "title": "Creates or not a segment for the extracted <Tu>"
    },
    "processAllTargets": {
      "type": "boolean",
      "default": true,
      "title": "Read all target entries"
    },
    "consolidateDpSkeleton": {
      "type": "boolean",
      "default": true,
      "title": "Group all document parts skeleton into one"
    },
    "exitOnInvalid": {
      "type": "boolean",
      "default": false,
      "title": "Exit when encountering invalid <tu>s (default is to skip invalid <tu>s)."
    },
    "propValueSep": {
      "type": "string",
      "default": ", ",
      "title": "String used to delimit property values when there are duplicate properties"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-introducedInOkapi": "0.38",
  "x-okapiVersions": [
    "0.38"
  ],
  "x-baseHash": "cb7c96f9121f",
  "x-compositeHash": "cb7c96f9121f"
}