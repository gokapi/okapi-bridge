{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_messageformat.schema.json",
  "$version": "2.0.0",
  "title": "Message Format Filter Filter",
  "description": "Configuration for the Okapi Message Format Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_messageformat",
    "class": "net.sf.okapi.filters.messageformat.MessageFormatFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-messageformat"
    ]
  },
  "properties": {
    "addPluralForms": {
      "type": "boolean",
      "default": false
    },
    "normalize": {
      "type": "boolean",
      "default": false
    },
    "prettyPrint": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Configure patterns for detecting inline codes.",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable inline code detection using regex patterns."
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code types.",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": false,
      "fields": [
        "codeFinderRules",
        "useCodeFinder",
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "addPluralForms",
        "normalize",
        "prettyPrint"
      ]
    }
  ],
  "x-schemaVersion": 2,
  "x-baseVersion": 2,
  "x-baseHash": "22e8645aef28",
  "x-compositeHash": "13f65cf45080",
  "x-introducedInOkapi": "1.48.0"
}
