{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_wsxzpackage.schema.json",
  "$version": "1.0.0",
  "title": "WSXZ Filter (BETA) Filter",
  "description": "Configuration for the Okapi WSXZ Filter (BETA) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_wsxzpackage",
    "class": "net.sf.okapi.filters.wsxzpackage.WsxzPackageFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-wsxzpackage"
    ]
  },
  "properties": {
    "mimeType": {
      "type": "string",
      "default": "application/x-archive",
      "title": "MIME type of the filter's container format",
      "x-widget": "text"
    },
    "fileNames": {
      "type": "string",
      "default": "*.tmx,*.xlf,*.xlff",
      "title": "File names",
      "description": "Comma-delimited list of file names to be processed (wildcards are allowed) in the same order as configuration ids",
      "x-widget": "text"
    },
    "configIds": {
      "type": "string",
      "default": "okf_tmx,okf_xliff,okf_xliff",
      "title": "Filter configuration ids",
      "description": "Comma-delimited list of configuration ids corresponding to the file names",
      "x-widget": "text"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "mimeType"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "fileNames",
        "configIds"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 1,
  "x-baseVersion": 1,
  "x-baseHash": "90e124236b78",
  "x-compositeHash": "1dd82defdd59",
  "x-introducedInOkapi": "1.45.0"
}
