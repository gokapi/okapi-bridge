{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_phpcontent.schema.json",
  "$version": "3.0.0",
  "title": "PHP Content Filter Filter",
  "description": "Configuration for the Okapi PHP Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_phpcontent",
    "class": "net.sf.okapi.filters.php.PHPContentFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-php"
    ],
    "configurations": [
      {
        "configId": "okf_phpcontent",
        "name": "PHP Content Default",
        "description": "Default PHP Content configuration.",
        "mimeType": "application/x-php",
        "extensions": ".php;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.php.PHPContentFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "title": "Has inline codes as defined below:",
      "x-widget": "checkbox",
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "useDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Use localization directives",
      "x-widget": "checkbox"
    },
    "extractOutsideDirectives": {
      "type": "boolean",
      "default": true,
      "title": "Extract outside the scope of the directives",
      "x-widget": "checkbox",
      "x-enabledBy": {
        "parameter": "useDirectives",
        "enabledWhenSelected": true
      }
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "useDirectives"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "26084884674a",
  "x-compositeHash": "7bd916c35e9d",
  "x-introducedInOkapi": "0.38"
}
