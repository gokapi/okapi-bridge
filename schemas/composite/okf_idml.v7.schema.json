{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_idml.schema.json",
  "$version": "7.0.0",
  "title": "IDML Filter Filter",
  "description": "Configuration for the Okapi IDML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_idml",
    "class": "net.sf.okapi.filters.idml.IDMLFilter",
    "extensions": [],
    "mimeTypes": [
      "application/vnd.adobe.indesign-idml-package"
    ]
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "specialCharacterPattern": {
      "type": "boolean",
      "default": false
    },
    "untagXmlStructures": {
      "type": "boolean",
      "default": true
    },
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "description": "Extract notes/comments as translator notes"
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true
    },
    "extractHiddenLayers": {
      "type": "boolean",
      "default": false
    },
    "extractHiddenPasteboardItems": {
      "type": "boolean",
      "default": false
    },
    "skipDiscretionaryHyphens": {
      "type": "boolean",
      "default": false
    },
    "extractBreaksInline": {
      "type": "boolean",
      "default": false
    },
    "extractHyperlinkTextSourcesInline": {
      "type": "boolean",
      "default": false
    },
    "extractCustomTextVariables": {
      "type": "boolean",
      "default": false
    },
    "extractIndexTopics": {
      "type": "boolean",
      "default": false
    },
    "extractExternalHyperlinks": {
      "type": "boolean",
      "default": false
    },
    "ignoreCharacterKerning": {
      "type": "boolean",
      "default": false
    },
    "characterKerningMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterKerningMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterTracking": {
      "type": "boolean",
      "default": false
    },
    "characterTrackingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterTrackingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterLeading": {
      "type": "boolean",
      "default": false
    },
    "characterLeadingMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterLeadingMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "ignoreCharacterBaselineShift": {
      "type": "boolean",
      "default": false
    },
    "characterBaselineShiftMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "characterBaselineShiftMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted for translation",
      "collapsed": false,
      "fields": [
        "extractAllPairs",
        "extractSource",
        "extractTarget",
        "extractNotes",
        "extractComments",
        "extractMetadata",
        "extractOuterStrings"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "maxAttributeSize",
        "specialCharacterPattern",
        "untagXmlStructures",
        "skipDiscretionaryHyphens",
        "excludedStyleConfigurations",
        "ignoreCharacterKerning",
        "characterKerningMinIgnoranceThreshold",
        "characterKerningMaxIgnoranceThreshold",
        "ignoreCharacterTracking",
        "characterTrackingMinIgnoranceThreshold",
        "characterTrackingMaxIgnoranceThreshold",
        "ignoreCharacterLeading",
        "characterLeadingMinIgnoranceThreshold",
        "characterLeadingMaxIgnoranceThreshold",
        "ignoreCharacterBaselineShift",
        "characterBaselineShiftMinIgnoranceThreshold",
        "characterBaselineShiftMaxIgnoranceThreshold"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    }
  ],
  "x-schemaVersion": 7,
  "x-baseVersion": 7,
  "x-baseHash": "cc6cf2e749c7",
  "x-compositeHash": "af5a66fc3f95"
}
