{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_properties.schema.json",
  "$version": "3.0.0",
  "title": "Properties Filter Filter",
  "description": "Configuration for the Okapi Properties Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_properties",
    "class": "net.sf.okapi.filters.properties.PropertiesFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-properties"
    ]
  },
  "properties": {
    "useLd": {
      "type": "boolean",
      "default": false
    },
    "localizeOutside": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "convertLFandTab": {
      "type": "boolean",
      "default": true
    },
    "useKeyCondition": {
      "type": "boolean",
      "default": false
    },
    "extractOnlyMatchingKey": {
      "type": "boolean",
      "default": true
    },
    "keyCondition": {
      "type": "string",
      "default": ".*text.*"
    },
    "extraComments": {
      "type": "boolean",
      "default": false
    },
    "commentsAreNotes": {
      "type": "boolean",
      "default": true,
      "description": "Treat comments as translator notes."
    },
    "escapeExtendedChars": {
      "type": "boolean",
      "default": true,
      "description": "Escape extended Unicode characters in output."
    },
    "idLikeResname": {
      "type": "boolean",
      "default": false
    },
    "useJavaEscapes": {
      "type": "boolean",
      "default": false
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "useLd",
        "useKeyCondition",
        "keyCondition"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "idLikeResname"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "notes",
      "label": "Notes & Comments",
      "collapsed": true,
      "fields": [
        "extraComments",
        "commentsAreNotes"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "convertLFandTab",
        "escapeExtendedChars",
        "useJavaEscapes"
      ]
    }
  ],
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "f7ab8887ec1b",
  "x-compositeHash": "a2815653640f",
  "x-introducedInOkapi": "1.48.0"
}
