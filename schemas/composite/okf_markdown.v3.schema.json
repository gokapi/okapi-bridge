{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_markdown.schema.json",
  "$version": "3.0.0",
  "title": "Markdown Filter Filter",
  "description": "Configuration for the Okapi Markdown Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_markdown",
    "class": "net.sf.okapi.filters.markdown.MarkdownFilter",
    "extensions": [],
    "mimeTypes": [
      "text/markdown"
    ]
  },
  "properties": {
    "htmlSubfilter": {
      "type": "string",
      "default": ""
    },
    "yamlSubfilter": {
      "type": "string",
      "default": ""
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable inline code detection using regex patterns."
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Configure patterns for detecting inline codes.",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "translateUrls": {
      "type": "boolean",
      "default": false
    },
    "translateCodeBlocks": {
      "type": "boolean",
      "default": true
    },
    "translateIndentedCodeBlocks": {
      "type": "boolean",
      "default": true
    },
    "translateInlineCodeBlocks": {
      "type": "boolean",
      "default": true
    },
    "translateHeaderMetadata": {
      "type": "boolean",
      "default": false
    },
    "translateImageAltText": {
      "type": "boolean",
      "default": true
    },
    "urlToTranslatePattern": {
      "type": "string",
      "default": ".+"
    },
    "htmlEntitiesToEscape": {
      "type": "string",
      "default": ""
    },
    "nonTranslateBlocks": {
      "type": "string",
      "default": ""
    },
    "unescapeBackslashCharacters": {
      "type": "boolean",
      "default": false
    },
    "charactersToEscape": {
      "type": "string",
      "default": "*_`{}[]<>()#+\\-.!|"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "translateUrls",
        "translateCodeBlocks",
        "translateIndentedCodeBlocks",
        "translateInlineCodeBlocks",
        "translateHeaderMetadata",
        "translateImageAltText",
        "urlToTranslatePattern",
        "nonTranslateBlocks",
        "parseMdx"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "htmlEntitiesToEscape",
        "unescapeBackslashCharacters",
        "charactersToEscape"
      ]
    },
    {
      "id": "subfilters",
      "label": "Subfilter Configuration",
      "collapsed": true,
      "fields": [
        "htmlSubfilter",
        "yamlSubfilter"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "generateHeaderAnchors"
      ]
    }
  ],
  "x-schemaVersion": 3,
  "x-baseVersion": 3,
  "x-baseHash": "e0ecb5a825d1",
  "x-compositeHash": "7e15ed13402f",
  "x-introducedInOkapi": "1.43.0"
}
