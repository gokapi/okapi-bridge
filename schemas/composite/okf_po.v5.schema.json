{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_po.schema.json",
  "$version": "5.0.0",
  "title": "PO Filter Filter",
  "description": "Configuration for the Okapi PO Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_po",
    "class": "net.sf.okapi.filters.po.POFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-gettext"
    ],
    "configurations": [
      {
        "configId": "okf_po",
        "name": "PO (Standard)",
        "description": "Standard bilingual PO files",
        "mimeType": "application/x-gettext",
        "extensions": ".po;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.po.POFilter"
      },
      {
        "configId": "okf_po-monolingual",
        "name": "PO (Monolingual)",
        "description": "Monolingual PO files (msgid is a real ID, not the source text).",
        "mimeType": "application/x-gettext",
        "extensions": ".po;",
        "parametersLocation": "monolingual.fprm",
        "parametersRaw": "#v1\nbilingualMode.b=false\nmakeID.b=true\nuseLD.b=true\nlocalizeOutside.b=true\nuseCodeFinder.b=true\ncodeFinderRules.count.i=2\ncodeFinderRules.rule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]\ncodeFinderRules.rule1=\\{\\d[^\\\\]*?\\}\ncodeFinderRules.sample=%s, %d, {1}, \\n, \\r, \\t, etc.\ncodeFinderRules.useAllRulesWhenTesting.b=true\n",
        "parameters": {
          "bilingualMode": false,
          "makeID": true,
          "useLD": true,
          "localizeOutside": true,
          "useCodeFinder": true,
          "codeFinderRules.count": 2,
          "codeFinderRules.rule0": "%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]",
          "codeFinderRules.rule1": "\\{\\d[^\\\\]*?\\}",
          "codeFinderRules.sample": "%s, %d, {1}, \\n, \\r, \\t, etc.",
          "codeFinderRules.useAllRulesWhenTesting": true
        },
        "isDefault": false,
        "filterClass": "net.sf.okapi.filters.po.POFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "protectApproved": {
      "type": "boolean",
      "default": false,
      "description": "Protect approved translations from changes."
    },
    "allowEmptyOutputTarget": {
      "type": "boolean",
      "default": false,
      "description": "Allow empty target in output when no translation."
    },
    "bilingualMode": {
      "type": "boolean",
      "default": true,
      "description": "Process file in bilingual mode (source and target)."
    },
    "makeID": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Regex patterns to identify inline codes in translatable text",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules"
    },
    "includeMsgContextInNote": {
      "type": "boolean",
      "default": false
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    },
    "wrapContent": {
      "type": "boolean",
      "default": true
    },
    "outputGeneric": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "protectApproved",
        "allowEmptyOutputTarget"
      ]
    },
    {
      "id": "identification",
      "label": "Identification",
      "collapsed": true,
      "fields": [
        "makeID"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "mode",
      "label": "Mode Settings",
      "collapsed": true,
      "fields": [
        "bilingualMode"
      ]
    }
  ],
  "x-schemaVersion": 5,
  "x-baseVersion": 5,
  "x-baseHash": "9d7b5401ccfa",
  "x-compositeHash": "093c04c2d1ca",
  "x-introducedInOkapi": "1.42.0"
}
