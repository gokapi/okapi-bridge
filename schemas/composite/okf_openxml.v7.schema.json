{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_openxml.schema.json",
  "$version": "7.0.0",
  "title": "OpenXML Filter Filter",
  "description": "Configuration for the Okapi OpenXML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_openxml",
    "class": "net.sf.okapi.filters.openxml.OpenXMLFilter",
    "extensions": [],
    "mimeTypes": [
      "text/xml"
    ]
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "bPreferenceTranslateDocProperties": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointDocProperties": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointDocProperties": {
      "type": "boolean",
      "default": false
    },
    "reorderPowerpointRelationships": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointDiagramData": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointDiagramData": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCharts": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointCharts": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateComments": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointComments": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointComments": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAggressiveCleanup": {
      "type": "boolean",
      "default": false
    },
    "ignoreWhitespaceStyles": {
      "type": "boolean",
      "default": false
    },
    "preserveAsciiAndHighAnsiFontCategoriesOnDetection": {
      "type": "boolean",
      "default": false
    },
    "removeEmbeddedExcel": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAutomaticallyAcceptRevisions": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslatePowerpointNotes": {
      "type": "boolean",
      "default": true,
      "description": "Extract speaker notes in PowerPoint presentations."
    },
    "bPreferenceReorderPowerpointNotes": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslatePowerpointMasters": {
      "type": "boolean",
      "default": true,
      "description": "Extract text from slide masters in PowerPoint."
    },
    "bPreferenceIgnorePlaceholdersInPowerpointMasters": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordHeadersFooters": {
      "type": "boolean",
      "default": true,
      "description": "Extract text from headers and footers in Word documents."
    },
    "translateWordNumberingLevelText": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordHidden": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelExcludeColors": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelSheetNames": {
      "type": "boolean",
      "default": false,
      "description": "Extract sheet names in Excel workbooks."
    },
    "translateExcelCellsCopied": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslateExcelDiagramData": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelDrawings": {
      "type": "boolean",
      "default": false,
      "description": "Extract text from shapes and drawings in Excel."
    },
    "bPreferenceTranslatePowerpointHidden": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordExcludeGraphicMetaData": {
      "type": "boolean",
      "default": false
    },
    "translateWordGraphicName": {
      "type": "boolean",
      "default": true
    },
    "translateWordGraphicDescription": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointGraphicName": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointGraphicDescription": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCachedChartStrings": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCachedChartNumbers": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelHidden": {
      "type": "boolean",
      "default": false,
      "description": "Extract text from hidden cells in Excel."
    },
    "bExtractExternalHyperlinks": {
      "type": "boolean",
      "default": false
    },
    "bInExcludeMode": {
      "type": "boolean",
      "default": true
    },
    "bInExcludeHighlightMode": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslateWordExcludeColors": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAddTabAsCharacter": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAddLineSeparatorAsCharacter": {
      "type": "boolean",
      "default": false
    },
    "sPreferenceLineSeparatorReplacement": {
      "type": "string",
      "default": "\n"
    },
    "bPreferenceReplaceNoBreakHyphenTag": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceIgnoreSoftHyphenTag": {
      "type": "boolean",
      "default": false
    },
    "bPreferencePowerpointIncludedSlideNumbersOnly": {
      "type": "boolean",
      "default": false
    },
    "bReorderPowerpointNotesAndComments": {
      "type": "boolean",
      "default": false
    },
    "ignoreWordFontColors": {
      "type": "boolean",
      "default": false
    },
    "wordFontColorsMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "wordFontColorsMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "allowWordStyleOptimisation": {
      "type": "boolean",
      "default": true
    },
    "preserveExcelStylesInTargetColumns": {
      "type": "boolean",
      "default": false
    },
    "treatExcelSourceColumnStylesForExclusion": {
      "type": "boolean",
      "default": false
    },
    "extractExcelSourceAndTargetColumnsJoined": {
      "type": "boolean",
      "default": false
    },
    "extractExcelWorksheetsExplicitlySpecified": {
      "type": "boolean",
      "default": false
    },
    "extractExcelCellsExplicitlySpecified": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAllowEmptyTargets": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false,
      "description": "Enable pattern-based detection of inline codes (placeholders, tags, etc.)"
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules",
      "x-presets": {
        "mergeFields": {
          "rules": [
            {
              "pattern": "«[^»]+»"
            }
          ],
          "sample": "Dear «FirstName» «LastName»"
        },
        "placeholders": {
          "rules": [
            {
              "pattern": "\\{[^}]+\\}"
            }
          ],
          "sample": "Hello {name}"
        }
      }
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "object",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "excel",
      "label": "Excel Workbooks",
      "description": "Settings for Excel workbooks (.xlsx)",
      "collapsed": true,
      "fields": [
        "bPreferenceTranslateExcelSheetNames",
        "bPreferenceTranslateExcelDrawings",
        "bPreferenceTranslateExcelHidden",
        "sExcelExcludedColumns"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "description": "Settings that apply to all Office document types",
      "collapsed": true,
      "fields": [
        "bPreferenceTranslateDocumentProperties"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "powerpoint",
      "label": "PowerPoint Presentations",
      "description": "Settings for PowerPoint presentations (.pptx)",
      "collapsed": true,
      "fields": [
        "bPreferenceTranslatePowerpointNotes",
        "bPreferenceTranslatePowerpointMasters",
        "sPowerpointExcludedSlides"
      ]
    },
    {
      "id": "word",
      "label": "Word Documents",
      "description": "Settings for Word documents (.docx)",
      "collapsed": false,
      "fields": [
        "bPreferenceTranslateWordHeadersFooters",
        "bPreferenceTranslateWordHiddenText",
        "bPreferenceTranslateWordComments",
        "bPreferenceTranslateWordTrackingChanges",
        "bPreferenceAggressiveCleanupWord"
      ]
    }
  ],
  "x-schemaVersion": 7,
  "x-baseVersion": 7,
  "x-baseHash": "8abe181fb764",
  "x-compositeHash": "8987d6aee80d"
}
