{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttx.schema.json",
  "$version": "4.0.0",
  "title": "TTX Filter Filter",
  "description": "Configuration for the Okapi TTX Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttx",
    "class": "net.sf.okapi.filters.ttx.TTXFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-ttx+xml"
    ],
    "configurations": [
      {
        "configId": "okf_ttx",
        "name": "TTX",
        "description": "Configuration for Trados TTX documents.",
        "mimeType": "application/x-ttx+xml",
        "extensions": ".ttx;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.ttx.TTXFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "segmentMode": {
      "type": "integer",
      "default": 0,
      "title": "Extraction mode",
      "enum": [
        "0",
        "1",
        "2"
      ],
      "x-enumLabels": [
        "Auto-detect existing segments (If found: extract only those, otherwise extract all)",
        "Extract only existing segments",
        "Extract all (existing segments and un-segmented text parts)"
      ],
      "x-widget": "select"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean",
      "description": "Move inline codes at segment boundaries to the skeleton (non-translatable)"
    },
    "mergeAdjacentCodes": {
      "type": "boolean",
      "description": "Merge consecutive inline codes into a single placeholder"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Rules for simplifying inline code representation",
      "x-widget": "simplifierRulesEditor"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters in output",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-groups": [
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "description": "Configure detection and handling of inline codes (placeholders, tags, etc.)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules",
        "mergeAdjacentCodes",
        "moveLeadingAndTrailingCodesToSkeleton",
        "simplifierRules"
      ]
    },
    {
      "id": "mode",
      "label": "Mode Settings",
      "collapsed": false,
      "fields": [
        "segmentMode"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "escapeGT"
      ]
    }
  ],
  "x-schemaVersion": 4,
  "x-baseVersion": 4,
  "x-baseHash": "f2037da08035",
  "x-compositeHash": "3c5356e9e9f2",
  "x-introducedInOkapi": "1.48.0"
}
