{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_tmx.schema.json",
  "$version": "1.0.0",
  "title": "TMX Filter",
  "description": "Configuration for the Okapi TMX Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_tmx",
    "class": "net.sf.okapi.filters.tmx.TmxFilter",
    "extensions": [
      ".tmx"
    ],
    "mimeTypes": []
  },
  "properties": {
    "segType": {
      "type": "integer",
      "default": 2,
      "title": "Creates or not a segment for the extracted <Tu>"
    },
    "processAllTargets": {
      "type": "boolean",
      "default": true,
      "title": "Read all target entries"
    },
    "consolidateDpSkeleton": {
      "type": "boolean",
      "default": true,
      "title": "Group all document parts skeleton into one"
    },
    "exitOnInvalid": {
      "type": "boolean",
      "default": false,
      "title": "Exit when encountering invalid <tu>s (default is to skip invalid <tu>s)."
    },
    "propValueSep": {
      "type": "string",
      "default": ", ",
      "title": "String used to delimit property values when there are duplicate properties"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "escapeGT": {
      "type": "boolean",
      "default": false,
      "title": "Escape the greater-than characters"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0",
    "1.44.0",
    "1.45.0",
    "1.46.0",
    "1.47.0"
  ],
  "x-introducedInOkapi": "0.38"
}