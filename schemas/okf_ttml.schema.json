{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttml.schema.json",
  "$version": "1.0.0",
  "title": "TTML Subtitles Filter",
  "description": "Configuration for the Okapi TTML Subtitles Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttml",
    "class": "net.sf.okapi.filters.ttml.TTMLFilter",
    "extensions": [
      ".ttml",
      ".xml"
    ],
    "mimeTypes": [
      "application/ttml+xml"
    ]
  },
  "properties": {
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format",
      "x-widget": "text"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes",
      "x-widget": "checkbox"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "1.47.0"
  ],
  "x-introducedInOkapi": "1.47.0"
}