{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_ttml.schema.json",
  "$version": "1.0.0",
  "title": "TTML Subtitles Filter",
  "description": "Configuration for the Okapi TTML Subtitles Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_ttml",
    "class": "net.sf.okapi.filters.ttml.TTMLFilter",
    "extensions": [
      ".ttml",
      ".xml"
    ],
    "mimeTypes": [
      "application/ttml+xml"
    ]
  },
  "properties": {
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit"
    }
  },
  "additionalProperties": false
}