{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_dtd.schema.json",
  "$version": "1.0.0",
  "title": "DTD Filter",
  "description": "Configuration for the Okapi DTD Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_dtd",
    "class": "net.sf.okapi.filters.dtd.DTDFilter",
    "extensions": [
      ".dtd"
    ],
    "mimeTypes": [
      "application/xml-dtd"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false
}