{
  "$schema": "https://gokapi.dev/schemas/editorHints.schema.json",
  "groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "collapsed": false,
      "fields": [
        "extractOuterStrings",
        "localizeOutside"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Handling",
      "collapsed": true,
      "fields": [
        "moveLeadingAndTrailingCodesToSkeleton",
        "mergeAdjacentCodes",
        "simplifierRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "collapsed": true,
      "fields": [
        "useBSlashEscape",
        "useDoubleCharEscape",
        "removeBSlashEscape"
      ]
    },
    {
      "id": "subfilters",
      "label": "Subfilter Configuration",
      "collapsed": true,
      "fields": [
        "subFilter"
      ]
    },
    {
      "id": "general",
      "label": "General Settings",
      "collapsed": true,
      "fields": [
        "startString",
        "endString",
        "oneLevelGroups",
        "useLd",
        "regexOptions",
        "mimeType"
      ]
    }
  ],
  "fields": {
    "extractOuterStrings": {},
    "startString": {},
    "endString": {},
    "useBSlashEscape": {},
    "useDoubleCharEscape": {},
    "removeBSlashEscape": {},
    "oneLevelGroups": {},
    "useLd": {},
    "localizeOutside": {},
    "regexOptions": {},
    "mimeType": {},
    "subFilter": {},
    "moveLeadingAndTrailingCodesToSkeleton": {
      "description": "Move inline codes at segment edges to skeleton."
    },
    "mergeAdjacentCodes": {
      "description": "Merge adjacent inline codes into a single code element."
    },
    "simplifierRules": {
      "description": "Rules for simplifying inline code types."
    }
  }
}