{
  "$schema": "https://gokapi.dev/schemas/editorHints.schema.json",
  "$include": ["_fragments/inlineCodes.fragment.json"],
  "groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": ["extractAllPairs", "extractStandalone", "useKeyAsName", "useFullKeyPath"]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": ["escapeExtendedChars"]
    }
  ],
  "fields": {
    "extractAllPairs": {
      "description": "Extract all key-value pairs for translation."
    },
    "extractStandalone": {
      "description": "Extract standalone string values (not part of key-value pairs)."
    },
    "useKeyAsName": {
      "description": "Use YAML key as the Block name for reference."
    },
    "useFullKeyPath": {
      "description": "Use full nested path as the name instead of immediate key."
    },
    "codeFinderRules": {
      "widget": "codeFinderRules",
      "presets": {
        "rubyI18n": {
          "rules": [{"pattern": "%\\{[^}]+\\}"}],
          "sample": "Hello %{name}"
        },
        "html": {
          "rules": [{"pattern": "<[^>]+>"}],
          "sample": "Click <b>here</b>"
        }
      }
    },
    "escapeExtendedChars": {
      "description": "Escape extended Unicode characters in output."
    }
  }
}
