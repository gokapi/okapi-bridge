{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xliff2.schema.json",
  "$version": "1.0.0",
  "title": "XLIFF-2 Filter (BETA) Filter",
  "description": "Configuration for the Okapi XLIFF-2 Filter (BETA) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xliff2",
    "class": "net.sf.okapi.filters.xliff2.XLIFF2Filter",
    "extensions": [],
    "mimeTypes": [
      "application/xliff+xml"
    ],
    "configurations": [
      {
        "configId": "okf_xliff2",
        "name": "XLIFF-2",
        "description": "Configuration for XLIFF-2 documents.",
        "mimeType": "application/xliff+xml",
        "extensions": ".xlf",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "maxValidation": {
      "type": "boolean",
      "default": true,
      "title": "Perform maximum validation when parsing",
      "x-widget": "checkbox"
    },
    "mergeAsParagraph": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "simplifyTags": {
      "type": "boolean",
      "default": true
    },
    "needsSegmentation": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false
}