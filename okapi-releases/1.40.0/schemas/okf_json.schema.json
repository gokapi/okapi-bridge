{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_json.schema.json",
  "$version": "1.0.0",
  "title": "Json Filter Filter",
  "description": "Configuration for the Okapi Json Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_json",
    "class": "net.sf.okapi.filters.json.JSONFilter",
    "extensions": [],
    "mimeTypes": [
      "application/json"
    ],
    "configurations": [
      {
        "configId": "okf_json",
        "name": "JSON (JavaScript Object Notation)",
        "description": "Configuration for JSON files",
        "mimeType": "application/json",
        "extensions": ".json;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.json.JSONFilter"
      }
    ]
  },
  "properties": {
    "extractIsolatedStrings": {
      "type": "boolean",
      "default": false
    },
    "extractAllPairs": {
      "type": "boolean",
      "default": true
    },
    "exceptions": {
      "type": "string",
      "default": ""
    },
    "useKeyAsName": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "useFullKeyPath": {
      "type": "boolean",
      "default": false
    },
    "useLeadingSlashOnKeyPath": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "escapeForwardSlashes": {
      "type": "boolean",
      "default": true
    },
    "noteRules": {
      "type": "string",
      "default": ""
    },
    "extractionRules": {
      "type": "string",
      "default": ""
    },
    "idRules": {
      "type": "string",
      "default": ""
    },
    "genericMetaRules": {
      "type": "string",
      "default": ""
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}