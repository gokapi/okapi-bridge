{
  "$schema": "https://gokapi.dev/schemas/editorHints.schema.json",
  "groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": ["extractSource", "extractTarget", "extractNotes"]
    },
    {
      "id": "states",
      "label": "State Handling",
      "description": "Control how translation states are handled",
      "collapsed": true,
      "fields": ["includeNotTranslated", "includeTranslated", "includeReviewNeeded", "includeFinal"]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": ["copySource", "useApprovedOnly"]
    }
  ],
  "fields": {
    "extractSource": {
      "description": "Extract source text from XLIFF file."
    },
    "extractTarget": {
      "description": "Extract target text from XLIFF file."
    },
    "extractNotes": {
      "description": "Extract translator notes from XLIFF file."
    },
    "includeNotTranslated": {
      "description": "Include segments with 'not translated' state."
    },
    "includeTranslated": {
      "description": "Include segments with 'translated' state."
    },
    "includeReviewNeeded": {
      "description": "Include segments that need review."
    },
    "includeFinal": {
      "description": "Include finalized segments."
    },
    "copySource": {
      "description": "Copy source to target if target is empty."
    },
    "useApprovedOnly": {
      "description": "Only use approved translations in output."
    }
  }
}
