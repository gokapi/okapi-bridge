{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_plaintext.schema.json",
  "$version": "1.0.0",
  "title": "Plain Text Filter",
  "description": "Configuration for the Okapi Plain Text Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_plaintext",
    "class": "net.sf.okapi.filters.plaintext.PlainTextFilter",
    "extensions": [
      ".txt"
    ],
    "mimeTypes": [
      "text/plain"
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0",
    "1.44.0",
    "1.45.0",
    "1.46.0",
    "1.47.0"
  ],
  "x-introducedInOkapi": "0.38"
}