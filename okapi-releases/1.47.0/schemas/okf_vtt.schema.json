{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_vtt.schema.json",
  "$version": "2.0.0",
  "title": "WebVTT Subtitles Filter",
  "description": "Configuration for the Okapi WebVTT Subtitles Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_vtt",
    "class": "net.sf.okapi.filters.vtt.VTTFilter",
    "extensions": [
      ".vtt"
    ],
    "mimeTypes": [
      "text/vtt"
    ]
  },
  "properties": {
    "cueSettings": {
      "type": "string",
      "default": "",
      "title": "Replace existing cue settings with text",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "discardCues",
        "enabledWhenSelected": false
      }
    },
    "discardCues": {
      "type": "boolean",
      "default": false,
      "title": "Discard existing cue settings",
      "x-widget": "checkbox"
    },
    "timeFormat": {
      "type": "string",
      "default": "",
      "title": "Time format",
      "x-widget": "text"
    },
    "maxLinesPerCaption": {
      "type": "integer",
      "default": 0,
      "title": "Max lines per caption",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "maxCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "cjkCharsPerLine": {
      "type": "integer",
      "default": 0,
      "title": "Max characters per line for CJK",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin"
    },
    "keepTimecodes": {
      "type": "boolean",
      "default": false,
      "title": "Keep timecodes",
      "x-widget": "checkbox"
    },
    "splitWords": {
      "type": "boolean",
      "default": false,
      "title": "Split words so that they don't go over the char limit",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 2,
  "x-okapiVersions": [
    "1.47.0"
  ],
  "x-introducedInOkapi": "1.47.0"
}