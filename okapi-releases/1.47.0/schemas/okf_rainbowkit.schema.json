{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_rainbowkit.schema.json",
  "$version": "1.0.0",
  "title": "Rainbow Translation Kit Filter Filter",
  "description": "Configuration for the Okapi Rainbow Translation Kit Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_rainbowkit",
    "class": "net.sf.okapi.filters.rainbowkit.RainbowKitFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-rainbowkit"
    ],
    "configurations": [
      {
        "configId": "okf_rainbowkit",
        "name": "Rainbow Translation Kit",
        "description": "Configuration for Rainbow translation kit.",
        "mimeType": "application/x-rainbowkit",
        "extensions": ".rkm;",
        "isDefault": true
      },
      {
        "configId": "okf_rainbowkit-package",
        "name": "Rainbow Translation Kit Package",
        "description": "Configuration for Rainbow translation kit package.",
        "mimeType": "application/x-rainbowkit-package",
        "extensions": ".rkp;",
        "isDefault": false
      },
      {
        "configId": "okf_rainbowkit-noprompt",
        "name": "Rainbow Translation Kit (No prompt)",
        "description": "Configuration for Rainbow translation kit (without prompt).",
        "mimeType": "application/x-rainbowkit",
        "extensions": ".rkm;",
        "parametersLocation": "noprompt.fprm",
        "parametersRaw": "#v1\nopenManifest.b=false\n",
        "parameters": {
          "openManifest.b": false
        },
        "isDefault": false
      }
    ]
  },
  "properties": {
    "openManifest": {
      "type": "boolean",
      "default": true,
      "title": "Open the manifest file before processing",
      "x-widget": "checkbox"
    }
  },
  "additionalProperties": false
}