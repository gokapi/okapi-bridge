{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_dtd.schema.json",
  "$version": "1.0.0",
  "title": "DTD Filter Filter",
  "description": "Configuration for the Okapi DTD Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_dtd",
    "class": "net.sf.okapi.filters.dtd.DTDFilter",
    "extensions": [],
    "mimeTypes": [
      "application/xml+dtd"
    ],
    "configurations": [
      {
        "configId": "okf_dtd",
        "name": "DTD (Document Type Definition)",
        "description": "Configuration for XML DTD documents (entities content)",
        "mimeType": "application/xml+dtd",
        "extensions": ".dtd;.ent;",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}