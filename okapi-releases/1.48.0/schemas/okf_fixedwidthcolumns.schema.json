{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_fixedwidthcolumns.schema.json",
  "$version": "1.0.0",
  "title": "Plain Text Filter Filter",
  "description": "Configuration for the Okapi Plain Text Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_fixedwidthcolumns",
    "class": "net.sf.okapi.filters.table.fwc.FixedWidthColumnsFilter",
    "extensions": [],
    "mimeTypes": [
      "text/csv"
    ],
    "configurations": [
      {
        "configId": "okf_table_fwc",
        "name": "Table (Fixed-Width Columns)",
        "description": "Fixed-width columns table padded with white-spaces.",
        "mimeType": "text/csv",
        "parametersLocation": "okf_table_fwc.fprm",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}