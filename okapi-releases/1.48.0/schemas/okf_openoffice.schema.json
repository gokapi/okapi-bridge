{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_openoffice.schema.json",
  "$version": "1.0.0",
  "title": "OpenOffice.org Filter Filter",
  "description": "Configuration for the Okapi OpenOffice.org Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_openoffice",
    "class": "net.sf.okapi.filters.openoffice.OpenOfficeFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-openoffice"
    ],
    "configurations": [
      {
        "configId": "okf_openoffice",
        "name": "OpenOffice.org Documents",
        "description": "OpenOffice.org ODT, ODS, ODP, ODG, OTT, OTS, OTP, OTG, SWC, SWX, SXD, SXI documents",
        "mimeType": "application/x-openoffice",
        "extensions": ".odt;.ods;.odg;.odp;.ott;.ots;.otp;.otg;.swc;.swx;.sxd;.sxi;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.openoffice.OpenOfficeFilter"
      }
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false
    },
    "extractReferences": {
      "type": "boolean",
      "default": false
    },
    "extractMetadata": {
      "type": "boolean",
      "default": true
    },
    "encodeCharacterEntityReferenceGlyphs": {
      "type": "boolean",
      "default": true
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean"
    },
    "mergeAdjacentCodes": {
      "type": "boolean"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}