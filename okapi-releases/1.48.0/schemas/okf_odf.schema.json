{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_odf.schema.json",
  "$version": "1.0.0",
  "title": "ODF-Content Filter Filter",
  "description": "Configuration for the Okapi ODF-Content Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_odf",
    "class": "net.sf.okapi.filters.openoffice.ODFFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-odf"
    ],
    "configurations": [
      {
        "configId": "okf_odf",
        "name": "OpenDocument",
        "description": "XML OpenDocument files (e.g. use inside OpenOffice.org documents).",
        "mimeType": "text/x-odf",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.openoffice.ODFFilter"
      }
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false
    },
    "extractReferences": {
      "type": "boolean",
      "default": false
    },
    "extractMetadata": {
      "type": "boolean",
      "default": true
    },
    "encodeCharacterEntityReferenceGlyphs": {
      "type": "boolean",
      "default": true
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "object"
    },
    "mergeAdjacentCodes": {
      "type": "object"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}