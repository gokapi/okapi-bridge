{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_transifex.schema.json",
  "$version": "1.0.0",
  "title": "Transifex Filter Filter",
  "description": "Configuration for the Okapi Transifex Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_transifex",
    "class": "net.sf.okapi.filters.transifex.TransifexFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-transifex"
    ],
    "configurations": [
      {
        "configId": "okf_transifex",
        "name": "Transifex Project",
        "description": "Transifex project with prompt when starting",
        "mimeType": "application/x-transifex",
        "extensions": ".txp;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.transifex.TransifexFilter"
      },
      {
        "configId": "okf_transifex-noPrompt",
        "name": "Transifex Project (without prompt)",
        "description": "Transifex project without prompt when starting",
        "mimeType": "application/x-transifex",
        "parametersLocation": "noPrompt.fprm",
        "parametersRaw": "#v1\nopenProject.b=false\n",
        "parameters": {
          "openProject": false
        },
        "isDefault": false,
        "filterClass": "net.sf.okapi.filters.transifex.TransifexFilter"
      }
    ]
  },
  "properties": {
    "openProject": {
      "type": "boolean",
      "default": true,
      "title": "Open the project file before processing",
      "x-widget": "checkbox"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean"
    },
    "mergeAdjacentCodes": {
      "type": "boolean"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}