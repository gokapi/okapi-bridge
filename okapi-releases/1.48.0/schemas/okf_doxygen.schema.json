{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_doxygen.schema.json",
  "$version": "1.0.0",
  "title": "Doxygen Filter Filter",
  "description": "Configuration for the Okapi Doxygen Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_doxygen",
    "class": "net.sf.okapi.filters.doxygen.DoxygenFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-doxygen-txt"
    ],
    "configurations": [
      {
        "configId": "okf_doxygen",
        "name": "Doxygen-commented Text",
        "description": "Doxygen-commented Text Documents",
        "mimeType": "text/x-doxygen-txt",
        "extensions": ".h;.c;.cpp;.java;.py;.m;",
        "parametersLocation": "doxygenConfiguration.yml",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false
}