{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_wiki.schema.json",
  "$version": "1.0.0",
  "title": "Wiki Filter Filter",
  "description": "Configuration for the Okapi Wiki Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_wiki",
    "class": "net.sf.okapi.filters.wiki.WikiFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-wiki-txt"
    ],
    "configurations": [
      {
        "configId": "okf_wiki",
        "name": "Wiki Markup",
        "description": "Text with wiki-style markup",
        "mimeType": "text/x-wiki-txt",
        "extensions": ".txt;",
        "parametersLocation": "wikiConfiguration.yml",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false
}