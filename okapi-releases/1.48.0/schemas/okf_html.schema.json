{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_html.schema.json",
  "$version": "1.0.0",
  "title": "HTML/XHTML Filter Filter",
  "description": "Configuration for the Okapi HTML/XHTML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_html",
    "class": "net.sf.okapi.filters.html.HtmlFilter",
    "extensions": [],
    "mimeTypes": [
      "text/html"
    ],
    "configurations": [
      {
        "configId": "okf_html",
        "name": "HTML",
        "description": "HTML or XHTML documents",
        "mimeType": "text/html",
        "extensions": ".html;.htm;",
        "parametersLocation": "nonwellformedConfiguration.yml",
        "isDefault": true
      },
      {
        "configId": "okf_html-wellFormed",
        "name": "HTML (Well-Formed)",
        "description": "XHTML and well-formed HTML documents",
        "mimeType": "text/html",
        "extensions": ".xhtml",
        "parametersLocation": "wellformedConfiguration.yml",
        "isDefault": false
      }
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "taggedConfig": {
      "type": "object"
    },
    "editorTitle": {
      "type": "string",
      "default": "Parameters Editor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false
}