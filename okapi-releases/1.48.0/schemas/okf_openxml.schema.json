{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_openxml.schema.json",
  "$version": "1.0.0",
  "title": "OpenXML Filter Filter",
  "description": "Configuration for the Okapi OpenXML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_openxml",
    "class": "net.sf.okapi.filters.openxml.OpenXMLFilter",
    "extensions": [],
    "mimeTypes": [
      "text/xml"
    ],
    "configurations": [
      {
        "configId": "okf_openxml",
        "name": "Microsoft Office Document",
        "description": "Microsoft Office documents (DOCX, DOCM, DOTX, DOTM, PPTX, PPTM, PPSX, PPSM, POTX, POTM, XLSX, XLSM, XLTX, XLTM, VSDX, VSDM).",
        "mimeType": "text/xml",
        "extensions": ".docx;.docm;.dotx;.dotm;.pptx;.pptm;.ppsx;.ppsm;.potx;.potm;.xlsx;.xlsm;.xltx;.xltm;.vsdx;.vsdm;",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.openxml.OpenXMLFilter"
      }
    ]
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "bPreferenceTranslateDocProperties": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointDocProperties": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointDocProperties": {
      "type": "boolean",
      "default": false
    },
    "reorderPowerpointRelationships": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointDiagramData": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointDiagramData": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCharts": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointCharts": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateComments": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointComments": {
      "type": "boolean",
      "default": true
    },
    "reorderPowerpointComments": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAggressiveCleanup": {
      "type": "boolean",
      "default": false
    },
    "ignoreWhitespaceStyles": {
      "type": "boolean",
      "default": false
    },
    "preserveAsciiAndHighAnsiFontCategoriesOnDetection": {
      "type": "boolean",
      "default": false
    },
    "removeEmbeddedExcel": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAutomaticallyAcceptRevisions": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslatePowerpointNotes": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceReorderPowerpointNotes": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslatePowerpointMasters": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceIgnorePlaceholdersInPowerpointMasters": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordHeadersFooters": {
      "type": "boolean",
      "default": true
    },
    "translateWordNumberingLevelText": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordHidden": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelExcludeColors": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelSheetNames": {
      "type": "boolean",
      "default": false
    },
    "translateExcelCellsCopied": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslateExcelDiagramData": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelDrawings": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslatePowerpointHidden": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateWordExcludeGraphicMetaData": {
      "type": "boolean",
      "default": false
    },
    "translateWordGraphicName": {
      "type": "boolean",
      "default": true
    },
    "translateWordGraphicDescription": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointGraphicName": {
      "type": "boolean",
      "default": true
    },
    "translatePowerpointGraphicDescription": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCachedChartStrings": {
      "type": "boolean",
      "default": false
    },
    "translatePowerpointCachedChartNumbers": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceTranslateExcelHidden": {
      "type": "boolean",
      "default": false
    },
    "bExtractExternalHyperlinks": {
      "type": "boolean",
      "default": false
    },
    "bInExcludeMode": {
      "type": "boolean",
      "default": true
    },
    "bInExcludeHighlightMode": {
      "type": "boolean",
      "default": true
    },
    "bPreferenceTranslateWordExcludeColors": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAddTabAsCharacter": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAddLineSeparatorAsCharacter": {
      "type": "boolean",
      "default": false
    },
    "sPreferenceLineSeparatorReplacement": {
      "type": "string",
      "default": "\n"
    },
    "bPreferenceReplaceNoBreakHyphenTag": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceIgnoreSoftHyphenTag": {
      "type": "boolean",
      "default": false
    },
    "bPreferencePowerpointIncludedSlideNumbersOnly": {
      "type": "boolean",
      "default": false
    },
    "bReorderPowerpointNotesAndComments": {
      "type": "boolean",
      "default": false
    },
    "ignoreWordFontColors": {
      "type": "boolean",
      "default": false
    },
    "wordFontColorsMinIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "wordFontColorsMaxIgnoranceThreshold": {
      "type": "string",
      "default": ""
    },
    "allowWordStyleOptimisation": {
      "type": "boolean",
      "default": true
    },
    "preserveExcelStylesInTargetColumns": {
      "type": "boolean",
      "default": false
    },
    "treatExcelSourceColumnStylesForExclusion": {
      "type": "boolean",
      "default": false
    },
    "extractExcelSourceAndTargetColumnsJoined": {
      "type": "boolean",
      "default": false
    },
    "extractExcelWorksheetsExplicitlySpecified": {
      "type": "boolean",
      "default": false
    },
    "extractExcelCellsExplicitlySpecified": {
      "type": "boolean",
      "default": false
    },
    "bPreferenceAllowEmptyTargets": {
      "type": "boolean",
      "default": false
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "moveLeadingAndTrailingCodesToSkeleton": {
      "type": "boolean"
    },
    "mergeAdjacentCodes": {
      "type": "boolean"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "nFileType": {
      "type": "string",
      "default": "MSWORD",
      "enum": [
        "MSWORD",
        "MSEXCEL",
        "MSWORDDOCPROPERTIES",
        "MSPOWERPOINTCOMMENTS"
      ]
    }
  },
  "additionalProperties": false
}