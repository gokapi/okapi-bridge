{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_html5.schema.json",
  "$version": "1.0.0",
  "title": "HTML5-ITS Filter Filter",
  "description": "Configuration for the Okapi HTML5-ITS Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_html5",
    "class": "net.sf.okapi.filters.its.html5.HTML5Filter",
    "extensions": [],
    "mimeTypes": [
      "text/html"
    ],
    "configurations": [
      {
        "configId": "okf_itshtml5",
        "name": "Standard HTML5",
        "description": "Configuration for standard HTML5 documents.",
        "mimeType": "text/html",
        "extensions": ".html;.htm;",
        "parametersLocation": "default.fprm",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "path": {
      "type": "string"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}