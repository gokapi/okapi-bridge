{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xmlstream.schema.json",
  "$version": "1.0.0",
  "title": "XML Stream Filter Filter",
  "description": "Configuration for the Okapi XML Stream Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xmlstream",
    "class": "net.sf.okapi.filters.xmlstream.XmlStreamFilter",
    "extensions": [],
    "mimeTypes": [
      "text/xml"
    ],
    "configurations": [
      {
        "configId": "okf_xmlstream",
        "name": "XML Stream",
        "description": "Large XML Documents",
        "mimeType": "text/xml",
        "parametersLocation": "default.yml",
        "isDefault": true
      },
      {
        "configId": "okf_xmlstream-dita",
        "name": "DITA",
        "description": "DITA XML",
        "mimeType": "text/xml",
        "extensions": ".dita;.ditamap;",
        "parametersLocation": "dita.yml",
        "isDefault": false
      },
      {
        "configId": "okf_xmlstream-JavaPropertiesHTML",
        "name": "Java Properties XML + HTML",
        "description": "Java Properties XML with Embedded HTML",
        "mimeType": "text/xml",
        "parametersLocation": "javaPropertiesXml.yml",
        "isDefault": false
      }
    ]
  },
  "properties": {
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "taggedConfig": {
      "type": "object"
    },
    "editorTitle": {
      "type": "string",
      "default": "Parameters Editor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false
}