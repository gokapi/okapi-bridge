{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_autoxliff.schema.json",
  "$version": "1.0.0",
  "title": "XLIFF 1.2 and 2.0 Filter Filter",
  "description": "Configuration for the Okapi XLIFF 1.2 and 2.0 Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_autoxliff",
    "class": "net.sf.okapi.filters.autoxliff.AutoXLIFFFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-xliff+xml"
    ],
    "configurations": [
      {
        "configId": "okf_autoxliff",
        "name": "XLIFF 1.2 and 2.0 Filter",
        "description": "Calls the appropriate filter for any version of XLIFF",
        "mimeType": "application/xliff+xml",
        "extensions": ".xlf;.xliff",
        "isDefault": true,
        "filterClass": "net.sf.okapi.filters.autoxliff.AutoXLIFFFilter"
      }
    ],
    "serializationFormat": "stringParameters"
  },
  "properties": {
    "xliff_config": {
      "type": "string",
      "default": "okf_xliff"
    },
    "xliff2_config": {
      "type": "string",
      "default": "okf_xliff2"
    }
  },
  "additionalProperties": false
}