{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_icml.schema.json",
  "$version": "1.0.0",
  "title": "InCopy ICML Filter",
  "description": "Configuration for the Okapi InCopy ICML Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_icml",
    "class": "net.sf.okapi.filters.icml.ICMLFilter",
    "extensions": [
      ".icml"
    ],
    "mimeTypes": []
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "title": "Extract notes",
      "x-widget": "checkbox"
    },
    "simplifyCodes": {
      "type": "boolean",
      "default": true,
      "title": "Simplify inline codes when possible",
      "x-widget": "checkbox"
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true,
      "title": "Extract master spreads",
      "x-widget": "checkbox"
    },
    "skipThreshold": {
      "type": "integer",
      "default": 1000,
      "title": "Maximum spread size",
      "description": "Skip any spread larger than the given value (in Kbytes)",
      "minimum": 1,
      "maximum": 32000,
      "x-widget": "spin"
    },
    "newTuOnBr": {
      "type": "boolean",
      "default": false,
      "title": "Create new paragraphs on hard returns (<Br/> elements) [BETA]"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}