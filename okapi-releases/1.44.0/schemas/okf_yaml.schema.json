{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_yaml.schema.json",
  "$version": "1.0.0",
  "title": "YAML Filter Filter",
  "description": "Configuration for the Okapi YAML Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_yaml",
    "class": "net.sf.okapi.filters.yaml.YamlFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-yaml"
    ],
    "configurations": [
      {
        "configId": "okf_yaml",
        "name": "YAML",
        "description": "YAML files",
        "mimeType": "text/x-yaml",
        "extensions": ".yml;.yaml",
        "isDefault": true
      }
    ]
  },
  "properties": {
    "extractIsolatedStrings": {
      "type": "boolean",
      "default": false
    },
    "extractAllPairs": {
      "type": "boolean",
      "default": true
    },
    "exceptions": {
      "type": "string",
      "default": ""
    },
    "useKeyAsName": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "useFullKeyPath": {
      "type": "boolean",
      "default": true
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "subFilterProcessLiteralAsBlock": {
      "type": "boolean",
      "default": false
    },
    "escapeNonAscii": {
      "type": "boolean",
      "default": false
    },
    "wrap": {
      "type": "boolean",
      "default": true
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}