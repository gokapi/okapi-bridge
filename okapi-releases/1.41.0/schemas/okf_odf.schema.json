{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_odf.schema.json",
  "$version": "1.0.0",
  "title": "ODF-Content Filter (BETA) Filter",
  "description": "Configuration for the Okapi ODF-Content Filter (BETA) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_odf",
    "class": "net.sf.okapi.filters.openoffice.ODFFilter",
    "extensions": [],
    "mimeTypes": [
      "text/x-odf"
    ]
  },
  "properties": {
    "extractNotes": {
      "type": "boolean",
      "default": false
    },
    "extractReferences": {
      "type": "boolean",
      "default": false
    },
    "extractMetadata": {
      "type": "boolean",
      "default": true
    },
    "encodeCharacterEntityReferenceGlyphs": {
      "type": "boolean",
      "default": true
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0"
  ],
  "x-introducedInOkapi": "0.38"
}