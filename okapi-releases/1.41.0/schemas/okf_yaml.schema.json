{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_yaml.schema.json",
  "$version": "1.0.0",
  "title": "YAML Filter",
  "description": "Configuration for the Okapi YAML Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_yaml",
    "class": "net.sf.okapi.filters.yaml.YamlFilter",
    "extensions": [
      ".yml",
      ".yaml"
    ],
    "mimeTypes": []
  },
  "properties": {
    "extractIsolatedStrings": {
      "type": "boolean",
      "default": false
    },
    "extractAllPairs": {
      "type": "boolean",
      "default": true,
      "description": "Extract all key-value pairs for translation."
    },
    "exceptions": {
      "type": "string",
      "default": ""
    },
    "useKeyAsName": {
      "type": "boolean",
      "default": true,
      "description": "Use YAML key as the Block name for reference."
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": true,
      "description": "Enable inline code detection using regex patterns."
    },
    "useFullKeyPath": {
      "type": "boolean",
      "default": true,
      "description": "Use full nested path as the name instead of immediate key."
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder",
      "x-widget": "codeFinderRules",
      "x-presets": {
        "rubyI18n": {
          "rules": [
            {
              "pattern": "%\\{[^}]+\\}"
            }
          ],
          "sample": "Hello %{name}"
        },
        "html": {
          "rules": [
            {
              "pattern": "<[^>]+>"
            }
          ],
          "sample": "Click <b>here</b>"
        }
      }
    },
    "subFilterProcessLiteralAsBlock": {
      "type": "boolean",
      "default": false
    },
    "escapeNonAscii": {
      "type": "boolean",
      "default": false
    },
    "wrap": {
      "type": "boolean",
      "default": true
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": [
        "extractAllPairs",
        "extractStandalone",
        "useKeyAsName",
        "useFullKeyPath"
      ]
    },
    {
      "id": "inlineCodes",
      "label": "Inline Code Detection",
      "description": "Configure detection of inline codes (placeholders, tags)",
      "collapsed": true,
      "fields": [
        "useCodeFinder",
        "codeFinderRules"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": [
        "escapeExtendedChars"
      ]
    }
  ],
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0"
  ],
  "x-introducedInOkapi": "0.38"
}