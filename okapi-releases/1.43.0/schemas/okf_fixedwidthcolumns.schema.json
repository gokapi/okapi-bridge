{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_fixedwidthcolumns.schema.json",
  "$version": "1.0.0",
  "title": "Plain Text Filter (BETA) Filter",
  "description": "Configuration for the Okapi Plain Text Filter (BETA) Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_fixedwidthcolumns",
    "class": "net.sf.okapi.filters.table.fwc.FixedWidthColumnsFilter",
    "extensions": [],
    "mimeTypes": [
      "text/csv"
    ],
    "configurations": [
      {
        "configId": "okf_table_fwc",
        "name": "Table (Fixed-Width Columns)",
        "description": "Fixed-width columns table padded with white-spaces.",
        "mimeType": "text/csv",
        "parametersLocation": "okf_table_fwc.fprm",
        "parametersRaw": "#v1\nunescapeSource.b=true\ntrimLeading.b=false\ntrimTrailing.b=false\npreserveWS.b=true\nuseCodeFinder.b=false\ncodeFinderRules=#v1$0a$count.i=2$0a$rule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]$0a$rule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v$0a$sample=$0a$useAllRulesWhenTesting.b=false\nwrapMode.i=0\ncolumnNamesLineNum.i=1\nvaluesStartLineNum.i=2\ndetectColumnsMode.i=0\nnumColumns.i=1\nsendHeaderMode.i=0\ntrimMode.i=2\nsendColumnsMode.i=2\nsourceIdColumns=\nsourceColumns=\ntargetColumns=\ncommentColumns=\ncommentSourceRefs=\nrecordIdColumn.i=0\nsourceIdSourceRefs=\nsourceIdSuffixes=\ntargetLanguages=\ntargetSourceRefs=\ncolumnStartPositions=\ncolumnEndPositions=\nparametersClass=net.sf.okapi.filters.table.fwc.Parameters\n",
        "parameters": {
          "unescapeSource": true,
          "trimLeading": false,
          "trimTrailing": false,
          "preserveWS": true,
          "useCodeFinder": false,
          "codeFinderRules": "#v1$0a$count.i=2$0a$rule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]$0a$rule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v$0a$sample=$0a$useAllRulesWhenTesting.b=false",
          "wrapMode": 0,
          "columnNamesLineNum": 1,
          "valuesStartLineNum": 2,
          "detectColumnsMode": 0,
          "numColumns": 1,
          "sendHeaderMode": 0,
          "trimMode": 2,
          "sendColumnsMode": 2,
          "sourceIdColumns": "",
          "sourceColumns": "",
          "targetColumns": "",
          "commentColumns": "",
          "commentSourceRefs": "",
          "recordIdColumn": 0,
          "sourceIdSourceRefs": "",
          "sourceIdSuffixes": "",
          "targetLanguages": "",
          "targetSourceRefs": "",
          "columnStartPositions": "",
          "columnEndPositions": "",
          "_parametersClass": "net.sf.okapi.filters.table.fwc.Parameters"
        },
        "isDefault": true
      }
    ]
  },
  "properties": {
    "columnStartPositions": {
      "type": "string",
      "default": ""
    },
    "columnEndPositions": {
      "type": "string",
      "default": ""
    },
    "columnNamesLineNum": {
      "type": "integer",
      "default": 0
    },
    "valuesStartLineNum": {
      "type": "integer",
      "default": 1
    },
    "detectColumnsMode": {
      "type": "integer",
      "default": 0
    },
    "numColumns": {
      "type": "integer",
      "default": 2
    },
    "sendHeaderMode": {
      "type": "integer",
      "default": 0
    },
    "trimMode": {
      "type": "integer",
      "default": 2
    },
    "sendColumnsMode": {
      "type": "integer",
      "default": 1
    },
    "recordIdColumn": {
      "type": "integer",
      "default": 0
    },
    "sourceColumns": {
      "type": "string",
      "default": "1"
    },
    "sourceIdColumns": {
      "type": "string",
      "default": ""
    },
    "sourceIdSuffixes": {
      "type": "string",
      "default": ""
    },
    "sourceIdSourceRefs": {
      "type": "string",
      "default": ""
    },
    "targetColumns": {
      "type": "string",
      "default": "2"
    },
    "targetSourceRefs": {
      "type": "string",
      "default": "1"
    },
    "targetLanguages": {
      "type": "string",
      "default": ""
    },
    "commentColumns": {
      "type": "string",
      "default": ""
    },
    "commentSourceRefs": {
      "type": "string",
      "default": ""
    },
    "unescapeSource": {
      "type": "boolean",
      "default": true
    },
    "trimLeading": {
      "type": "boolean",
      "default": true
    },
    "trimTrailing": {
      "type": "boolean",
      "default": true
    },
    "preserveWS": {
      "type": "boolean",
      "default": true
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "string",
      "default": "#v1\ncount.i=2\nrule0=%(([-0+#]?)[-0+#]?)((\\d\\$)?)(([\\d\\*]*)(\\.[\\d\\*]*)?)[dioxXucsfeEgGpn]\nrule1=(\\\\r\\\\n)|\\\\a|\\\\b|\\\\f|\\\\n|\\\\r|\\\\t|\\\\v\nsample=\nuseAllRulesWhenTesting.b=false"
    },
    "wrapMode": {
      "type": "string",
      "default": "NONE",
      "enum": [
        "NONE",
        "SPACES",
        "PLACEHOLDERS"
      ]
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false
}