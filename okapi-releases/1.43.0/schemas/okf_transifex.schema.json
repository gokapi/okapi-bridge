{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_transifex.schema.json",
  "$version": "1.0.0",
  "title": "Transifex Filter Filter",
  "description": "Configuration for the Okapi Transifex Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_transifex",
    "class": "net.sf.okapi.filters.transifex.TransifexFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-transifex"
    ]
  },
  "properties": {
    "openProject": {
      "type": "boolean",
      "default": true,
      "title": "Open the project file before processing",
      "x-widget": "checkbox"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0"
  ],
  "x-introducedInOkapi": "0.38"
}