{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_multiparsers.schema.json",
  "$version": "1.0.0",
  "title": "Multi-Parsers Filter Filter",
  "description": "Configuration for the Okapi Multi-Parsers Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_multiparsers",
    "class": "net.sf.okapi.filters.multiparsers.MultiParsersFilter",
    "extensions": [],
    "mimeTypes": [
      "application/x-multiparsers"
    ]
  },
  "properties": {
    "csvNoExtractCols": {
      "type": "string",
      "default": "",
      "title": "Comma-separated list of the colums not to extract (first=0)",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvFormatCols": {
      "type": "string",
      "default": "",
      "title": "Comma-separated list of the colums with non-plain-text content (e.g. '3:okf_markdown', first=0)",
      "x-widget": "text",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvStartingRow": {
      "type": "integer",
      "default": 1,
      "title": "Row at which the extraction starts (first=1)",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": false
      }
    },
    "csvAutoDetectColumnTypes": {
      "type": "boolean",
      "default": false,
      "title": "Use auto-detection (a special row in each input file)",
      "x-widget": "checkbox"
    },
    "csvAutoDetectColumnTypesRow": {
      "type": "integer",
      "default": 2,
      "title": "Row at which the special configuration information is (first=1)",
      "minimum": 1,
      "maximum": 9999999,
      "x-widget": "spin",
      "x-enabledBy": {
        "parameter": "csvAutoDetectColumnTypes",
        "enabledWhenSelected": true
      }
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0"
  ],
  "x-introducedInOkapi": "0.38"
}