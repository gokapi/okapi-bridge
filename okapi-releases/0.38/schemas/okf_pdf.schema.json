{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_pdf.schema.json",
  "$version": "1.0.0",
  "title": "PDF Filter",
  "description": "Configuration for the Okapi PDF Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_pdf",
    "class": "net.sf.okapi.filters.pdf.PdfFilter",
    "extensions": [
      ".pdf"
    ],
    "mimeTypes": [
      "application/pdf"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "indentThreshold": {
      "type": "string",
      "default": "2.0",
      "title": "Amount of indent needed to define a new paragraph (Default=2.0)",
      "x-widget": "text"
    },
    "spacingTolerance": {
      "type": "string",
      "default": "0.5",
      "title": "Amount of spacing needed to define a white space character (Default=0.5)",
      "x-widget": "text"
    },
    "preserveWhitespace": {
      "type": "boolean",
      "default": false,
      "title": "Preserve whitespace",
      "x-widget": "checkbox"
    },
    "lineSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as line separator",
      "x-widget": "text"
    },
    "paragraphSeparator": {
      "type": "string",
      "default": "\n",
      "title": "Character to use as paragraph separator",
      "x-widget": "text"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38"
  ],
  "x-introducedInOkapi": "0.38"
}