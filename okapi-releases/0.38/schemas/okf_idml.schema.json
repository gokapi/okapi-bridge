{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_idml.schema.json",
  "$version": "1.0.0",
  "title": "InDesign IDML Filter",
  "description": "Configuration for the Okapi InDesign IDML Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_idml",
    "class": "net.sf.okapi.filters.idml.IDMLFilter",
    "extensions": [
      ".idml"
    ],
    "mimeTypes": []
  },
  "properties": {
    "maxAttributeSize": {
      "type": "integer",
      "default": 4194304
    },
    "untagXmlStructures": {
      "type": "boolean",
      "default": true,
      "title": "Untag XML structures",
      "x-widget": "checkbox"
    },
    "extractNotes": {
      "type": "boolean",
      "default": false,
      "title": "Extract notes",
      "x-widget": "checkbox"
    },
    "extractMasterSpreads": {
      "type": "boolean",
      "default": true,
      "title": "Extract master spreads",
      "x-widget": "checkbox"
    },
    "extractHiddenLayers": {
      "type": "boolean",
      "default": false,
      "title": "Extract hidden layers",
      "x-widget": "checkbox"
    },
    "skipDiscretionaryHyphens": {
      "type": "boolean",
      "default": false,
      "title": "Skip discretionary hyphens",
      "x-widget": "checkbox"
    },
    "ignoreCharacterKerning": {
      "type": "boolean",
      "default": false,
      "title": "Ignore character kerning",
      "x-widget": "checkbox"
    },
    "characterKerningMinIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character kerning minimum ignorance threshold",
      "x-widget": "text"
    },
    "characterKerningMaxIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character kerning maximum ignorance threshold",
      "x-widget": "text"
    },
    "ignoreCharacterTracking": {
      "type": "boolean",
      "default": false,
      "title": "Ignore character tracking",
      "x-widget": "checkbox"
    },
    "characterTrackingMinIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character tracking minimum ignorance threshold",
      "x-widget": "text"
    },
    "characterTrackingMaxIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character tracking maximum ignorance threshold",
      "x-widget": "text"
    },
    "ignoreCharacterLeading": {
      "type": "boolean",
      "default": false,
      "title": "Ignore character leading",
      "x-widget": "checkbox"
    },
    "characterLeadingMinIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character leading minimum ignorance threshold",
      "x-widget": "text"
    },
    "characterLeadingMaxIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character leading maximum ignorance threshold",
      "x-widget": "text"
    },
    "ignoreCharacterBaselineShift": {
      "type": "boolean",
      "default": false,
      "title": "Ignore character baseline shift",
      "x-widget": "checkbox"
    },
    "characterBaselineShiftMinIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character baseline shift minimum ignorance threshold",
      "x-widget": "text"
    },
    "characterBaselineShiftMaxIgnoranceThreshold": {
      "type": "string",
      "default": "",
      "title": "Character baseline shift maximum ignorance threshold",
      "x-widget": "text"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38"
  ],
  "x-introducedInOkapi": "0.38"
}