{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_dtd.schema.json",
  "$version": "1.0.0",
  "title": "DTD Filter Filter",
  "description": "Configuration for the Okapi DTD Filter Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_dtd",
    "class": "net.sf.okapi.filters.dtd.DTDFilter",
    "extensions": [],
    "mimeTypes": [
      "application/xml+dtd"
    ]
  },
  "properties": {
    "useCodeFinder": {
      "type": "boolean",
      "default": true
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0",
    "1.44.0",
    "1.45.0"
  ],
  "x-introducedInOkapi": "0.38"
}