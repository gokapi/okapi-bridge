{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xmlstream.schema.json",
  "$version": "1.0.0",
  "title": "XML Stream Filter",
  "description": "Configuration for the Okapi XML Stream Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xmlstream",
    "class": "net.sf.okapi.filters.xmlstream.XmlStreamFilter",
    "extensions": [
      ".xml"
    ],
    "mimeTypes": [
      "text/xml",
      "application/xml"
    ]
  },
  "properties": {
    "taggedConfig": {
      "type": "object"
    },
    "editorTitle": {
      "type": "string",
      "default": "Parameters Editor"
    },
    "simplifierRules": {
      "type": "string",
      "description": "Simplifier rules for code type normalization",
      "x-widget": "simplifierRulesEditor"
    },
    "path": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "x-schemaVersion": 1,
  "x-okapiVersions": [
    "0.38",
    "1.39.0",
    "1.40.0",
    "1.41.0",
    "1.42.0",
    "1.43.0",
    "1.44.0",
    "1.45.0"
  ],
  "x-introducedInOkapi": "0.38"
}