{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gokapi.dev/schemas/filters/okf_xliff2.schema.json",
  "$version": "1.0.0",
  "title": "XLIFF 2.x Filter",
  "description": "Configuration for the Okapi XLIFF 2.x Filter",
  "type": "object",
  "x-filter": {
    "id": "okf_xliff2",
    "class": "net.sf.okapi.filters.xliff2.XLIFF2Filter",
    "extensions": [
      ".xlf"
    ],
    "mimeTypes": [
      "application/xliff+xml"
    ]
  },
  "properties": {
    "maxValidation": {
      "type": "boolean",
      "default": true,
      "title": "Perform maximum validation when parsing",
      "x-widget": "checkbox"
    },
    "useCodeFinder": {
      "type": "boolean",
      "default": false
    },
    "codeFinderRules": {
      "type": "object",
      "description": "Inline code detection configuration",
      "properties": {
        "rules": {
          "type": "array",
          "description": "List of regex patterns to detect inline codes",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern for inline code detection"
              }
            },
            "required": [
              "pattern"
            ]
          }
        },
        "sample": {
          "type": "string",
          "description": "Sample text to test patterns against"
        },
        "useAllRulesWhenTesting": {
          "type": "boolean",
          "default": true,
          "description": "Test all rules together or individually"
        }
      },
      "x-okapiFormat": "inlineCodeFinder"
    },
    "simplifyTags": {
      "type": "boolean",
      "default": false
    },
    "needsSegmentation": {
      "type": "boolean",
      "default": false
    }
  },
  "x-groups": [
    {
      "id": "extraction",
      "label": "Extraction Settings",
      "description": "Control what content is extracted",
      "collapsed": false,
      "fields": [
        "extractSource",
        "extractTarget",
        "extractNotes"
      ]
    },
    {
      "id": "states",
      "label": "State Handling",
      "description": "Control how XLIFF 2.x states are handled",
      "collapsed": true,
      "fields": [
        "includeInitial",
        "includeTranslated",
        "includeReviewed",
        "includeFinal"
      ]
    },
    {
      "id": "metadata",
      "label": "Metadata",
      "description": "Configure metadata extraction",
      "collapsed": true,
      "fields": [
        "extractMetadata",
        "extractChanges"
      ]
    },
    {
      "id": "output",
      "label": "Output Settings",
      "description": "Configure output formatting",
      "collapsed": true,
      "fields": [
        "copySource",
        "useApprovedOnly",
        "preserveSegmentation"
      ]
    }
  ],
  "additionalProperties": false
}